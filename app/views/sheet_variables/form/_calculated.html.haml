- is_grid = defined?(grid)

- target_name = field_name.gsub("[", "_").gsub("]", "")
- value = response

-# TODO: Change .format to .calculated_format
.input-group{ data: { object: "validate", project_id: @project.to_param, variable_id: variable.id, target_name: target_name, components: "calculated", status: variable.validator.status(value), format: variable.calculated_format } }
  = render "sheet_variables/form/addon", method: "prepend", variable: variable
  = text_field_tag "#{target_name}_calculation_result", response, class: "form-control", disabled: "disabled"
  = hidden_field_tag field_name, response, disabled: disabled, data: { object: "calculated", design: design.to_param, calculation: variable.calculation, variable_id: variable.id, target: "##{target_name}_calculation_result", calculation_id: variable.id, name: variable.name, grid_position: defined?(position) ? position : "", target_name: target_name, handoff: @handoff.to_param }
  = render "sheet_variables/form/addon", method: "units", variable: variable
  = render "sheet_variables/form/addon", method: "append", variable: variable
  %span.input-group-btn.input-group-addon{ style: "margin: -1px;padding: 0;border: 0" }
    = link_to "#", class: "btn btn-default", tabindex: "-1", data: { object: "toggle-visibility", target: "#calculation_#{target_name}"} do
      %i.fa.fa-info-circle

%pre{ id: "calculation_#{target_name}", style: "display: none;margin-top: 20px;" }
  = variable.formatted_calculation
