<% is_grid = defined?(grid) %>

<div class="<% unless variable.prepend.blank? %>input-prepend<% end %> <% unless variable.append.blank? %>input-append<% end %>" style="display:inline-block">
  <% unless variable.prepend.blank? %><span class="add-on"><%= variable.prepend %></span><% end %>
  <%= text_field_tag field_name, response, class: "input-#{defined?(control_size) ? control_size : 'large'}", data: { content: variable.description, title: variable.display_name, object: "condition variable-typeahead", variable_id: variable.id }, rel: "#{variable.description.blank? ? 'tooltip' : 'popover'}", autocomplete: 'off', disabled: disabled, title: variable.display_name, placeholder: is_grid ? variable.display_name : nil %>
  <% unless variable.append.blank? %><span class="add-on"><%= variable.append %></span><% end %>
</div>
