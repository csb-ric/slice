<% is_grid = defined?(grid) %>
<% show_values = true unless defined?(show_values) %>

<%= select_tag field_name, "<option value=''></option>".html_safe + grouped_options_for_select(variable.grouped_by_missing(show_values), response),
      data: {
              title: variable.display_name,
              content: variable.description,
              object: "condition",
              name: variable.name,
              html: true
            },
      rel: "#{variable.description.blank? ? 'tooltip' : 'popover'}",
      disabled: disabled,
      class: "chzn-select #{'form-control' unless is_grid}" %>
