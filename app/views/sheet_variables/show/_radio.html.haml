- response_name = object.get_response(:name) if object
- response_raw = object.get_response(:raw) if object

- if variable.alignment == 'scale'
  %table.table.table-borderless
    %col{ width: '300px' }
    - (1..variable.domain_options.count).each do
      %col{ width: "#{100 / (variable.domain_options.count + 2)}%" }
    %col{ width: '1px' }
    - if variable.first_scale_variable?(@sheet.design)
      %thead
        %tr
          %th
          - variable.domain_options.each do |domain_option|
            %th.center
              = domain_option.value_and_name
    %tbody
      %tr
        %th= variable.display_name
        - variable.domain_options.each do |domain_option|
          %td.center
            - selected = (domain_option.value == response_raw.to_s)
            %label.radio-inline.checkbox-radio-outline{ class: "#{'selected' if selected} #{'negation' if domain_option.missing_code?}" }
              = radio_button_tag variable.name, domain_option.value, selected, disabled: true
- else
  = response_name
