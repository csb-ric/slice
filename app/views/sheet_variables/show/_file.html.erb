<% if object %>
  <% response_name = object.get_response(:name) %>
  <% response_file = object.get_response(:raw) %>

  <% if response_file and response_file.size > 0 %>
    <% full_url = file_project_sheet_path(@project, @sheet, sheet_variable_id: object.kind_of?(SheetVariable) ? object.id : object.sheet_variable_id, variable_id: object.variable_id, position: object.methods.include?(:position) ? object.position : nil) %>
    <% if ['jpg', 'jpeg', 'gif', 'png'].include?(response_name.split('.').last.to_s.downcase) %>
      <%= link_to image_tag(full_url, style: "height:64px;border:0px solid white"), full_url, target: '_blank' %>
    <% else %>
      <%= link_to response_name, full_url, target: '_blank', class: 'btn btn-default btn-xs' %>
    <% end %>
    <%= number_to_human_size(response_file.size) %>
  <% end %>
<% end %>
