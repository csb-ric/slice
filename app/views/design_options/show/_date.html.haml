- is_grid = defined?(grid)
- form = nil
- form_with { |f| form = f }
= render "sheet_variables/form/date", form: form, design: design, design_option: design_option, response: response, disabled: true, variable: variable, field_name: "variables[#{variable.id}]", show_values: true, object: nil, validate_response: nil

- unless is_grid
  %div{ style: "margin-top: 10px; margin-bottom: 20px;" }
    = link_to "Edit Ranges", edit_variable_project_design_design_option_path(@project, @design, design_option, attribute: "date"), remote: true, method: :get, class: "design-preview-hide btn btn-sm btn-primary btn-shadow"

  - if variable.date_hard_minimum.present? || variable.date_soft_minimum.present? || variable.date_hard_maximum.present? || variable.date_soft_maximum.present?
    - if variable.date_hard_maximum.present?
      %div
        %code
          Hard Max:
        %code
          = variable.date_hard_maximum

    - if variable.date_soft_maximum.present?
      %div
        %code
          Soft Max:
        %code
          = variable.date_soft_maximum


    - if variable.date_soft_minimum.present?
      %div
        %code
          Soft Min:
        %code
          = variable.date_soft_minimum

    - if variable.date_hard_minimum.present?
      %div
        %code
          Hard Min:
        %code
          = variable.date_hard_minimum
