.design-option-lead
  = title
.design-option-body
  .btn-group{ data: { toggle: "buttons" } }
    - values.each do |label, value|
      = link_to project_design_design_option_path(@project, @design, design_option, variable: { attribute => value }), remote: true, method: :patch, class: "btn btn-xs btn-default #{"active" if design_option.variable.send(attribute) == value}" do
        = label
