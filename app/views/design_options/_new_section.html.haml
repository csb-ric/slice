.modal-header
  %h4.modal-title
    = link_to "Add Section or Question", new_project_design_design_option_path(@project, @design, position: @design_option.position), remote: true
    &middot;
    New Section
  %button.close{ type: "button", data: { dismiss: "modal" }, aria: { hidden: true } } &times;
.modal-body
  = form_with url: create_section_project_design_design_options_path(@project, @design), method: :post, enctype: "multipart/form-data", authenticity_token: true, id: "design_option_form" do |form|
    = render "design_options/form_section", form: form, design_option: @design_option, section: @section
.modal-footer
  = button_tag "Add Section", data: { object: "submit-section-form-with-file", target: "#design_option_form", method: :post }, class: "btn btn-primary"
  %button.btn.btn-light{ type: "button", data: { dismiss: "modal" } } Cancel
