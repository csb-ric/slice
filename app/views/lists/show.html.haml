- @title = @list.name
- @menu_title = "#{@project.name} #{@title}"

- content_for :sidebar, render("projects/sidebar")
- content_for :header, @title
- content_for :breadcrumbs do
  %ol
    %li= link_to "randomization schemes", project_randomization_schemes_path(@project)
    %li= link_to @randomization_scheme.name.downcase, [@project, @randomization_scheme]
    %li= link_to "lists", project_randomization_scheme_lists_path(@project, @randomization_scheme)
    %li.breadcrumb-muted= @list.name.downcase

.dashboard-container
  %table.table.table-borderless
    %col.d-none.d-sm-table-column{ width: "30%" }
    %col.d-table-column.d-sm-none{ width: "50%" }
    %tr
      %th Creator
      %td= link_to @list.user.full_name, @list.user if @list.user

  .row
    .com-md-2
    .col-md-8
      = render "lists/block_groups", list: @list


