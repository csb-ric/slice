- @title = @subject_event.name
- @menu_title = "#{@project.name} #{@subject.name} #{@title}"

= render 'subjects/side_nav'

- content_for :header do
  .background-gradient
  .header-container
    .container
      - if @subject.editable_by?(current_user)
        .dropdown.pull-right
          = link_to '#', class: 'btn btn-default dropdown-toggle', data: { toggle: 'dropdown' } do
            Actions
            %strong.caret

          %ul.dropdown-menu.dropdown-menu-right
            %li
              = link_to edit_event_project_subject_path(@project, @subject, event_id: @subject_event.event.id, subject_event_id: @subject_event.id, event_date: @subject_event.event_date_to_param) do
                %span.glyphicon.glyphicon-edit
                Edit
            %li.divider{ role: 'separator' }
            %li
              = link_to destroy_event_project_subject_path(@project, @subject, event_id: @subject_event.event.id, subject_event_id: @subject_event.id, event_date: @subject_event.event_date_to_param), method: :delete, data: { confirm: "Are you sure you want to remove #{@subject_event.event.name} from subject? Associated sheets will not be deleted." } do
                .text-danger
                  %span.glyphicon.glyphicon-trash
                  Delete
      %h1.page-heading
        = render 'layouts/side_nav_header_button'
        = link_to @subject.name, [@project, @subject]
        = @title
        - if @project.blinding_enabled? && @event.only_unblinded?
          %small
            %span.glyphicon.glyphicon-eye-open.text-muted{ rel: 'tooltip', data: { title: 'Unblinded Only', placement: 'top', container: 'body' } }

%div{ id: "subject_event_#{@subject_event.id}" }= render @subject_event
