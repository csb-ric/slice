- @title = "Sheets"
- @menu_title = "#{@project.name} #{@subject.name} #{@title}"

- content_for :sidebar, render("subjects/sidebar")

- content_for :header do
  - if @subject.editable_by?(current_user)
    .float-right
      = link_to plus_or("New Sheet"), data_entry_project_subject_path(@project, @subject), class: "btn btn-accent btn-shadow"
  = link_to @subject.name, [@project, @subject]
  = @title

#subject-sheets= render "subjects/sheets"
