- @title = 'Adverse Events'
- @menu_title = "#{@project.name} #{@subject.name} #{@title}"

= render 'subjects/side_nav'

- content_for :header do
  .background-gradient
  .header-container
    .container
      - if @subject.editable_by?(current_user)
        .pull-right
          = link_to plus_or('Report Adverse Event'), new_project_adverse_event_path(@project, subject_code: @subject.subject_code), class: 'btn btn-accent btn-shadow'
      %h1.page-heading
        = link_to @subject.name, [@project, @subject]
        = @title

- if @subject.adverse_events.count == 0
  .jumbotron.center
    %p.lead No adverse events have been reported this subject.

- else
  .dashboard-container
    %ul
      - @subject.adverse_events.each do |adverse_event|
        %li{ style: 'line-height:30px' }
          = link_to adverse_event.name, [@project, adverse_event]
          - if adverse_event.closed?
            %span.label.label-danger Closed
          - else
            %span.label.label-success Open
          %br
          = adverse_event.description
