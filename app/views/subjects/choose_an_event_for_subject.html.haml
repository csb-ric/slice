      %li.little-container
        = link_to 'Baseline', put_a_subject_on_an_event_project_subject_path(@project, @subject, event_id: 'baseline')
        %ul.text-muted
          %li Blood-Pressure Form
          %li Vitals
      %li.little-container
        = link_to '6-Month', put_a_subject_on_an_event_project_subject_path(@project, @subject, event_id: '6-month')
        %ul.text-muted
          %li Blood-Pressure Form
