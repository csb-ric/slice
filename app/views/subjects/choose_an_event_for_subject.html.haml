  .col-md-6
    %h2 Unscheduled Events
    %ul.list-unstyled
      %li.little-container
        = link_to 'Adverse Event', put_a_subject_on_an_event_project_subject_path(@project, @subject, event_id: 'adverse-event')
        %ul.text-muted
          %li AE Form
      %li.little-container
        = link_to 'Phone-Call', put_a_subject_on_an_event_project_subject_path(@project, @subject, event_id: 'phone-call')
        %ul.text-muted
          %li Phone-Call
      %li.little-container
        = link_to 'Participant Withrew', put_a_subject_on_an_event_project_subject_path(@project, @subject, event_id: 'participant-withdrew')
        %ul.text-muted
          %li Participant Left Study Form

%div
