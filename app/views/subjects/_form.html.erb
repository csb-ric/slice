<div class="page-header">
  <h1><%= link_to @project.name, @project %> &middot; <%= @title %></h1>
</div>

<%= form_for [@subject.project, @subject], html: { class: 'form-horizontal' } do |f| %>
  <% if @subject.errors.any? %>
    <div id="error_explanation" class="bs-callout bs-callout-danger">
      <h4><%= pluralize(@subject.errors.count, "error") %> prohibited this subject from being saved</h4>

      <ul>
      <% @subject.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= label_tag 'site_id', 'Site', class: 'col-lg-2 control-label' %>
    <div class="col-lg-10" id="site">
      <%= @project = @subject.project; render partial: 'sites/selection' %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :subject_code, nil, class: 'col-lg-2 control-label' %>
    <div class="col-lg-10">
      <%= f.text_field :subject_code, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group" style="<%= 'display:none' unless @subject.project and @subject.project.acrostic_enabled? %>" id="acrostic-container">
    <%= f.label :acrostic, nil, class: 'col-lg-2 control-label' %>
    <div class="col-lg-10">
      <%= f.text_field :acrostic, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :email, nil, class: 'col-lg-2 control-label' %>
    <div class="col-lg-10">
      <%= f.text_field :email, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :status, nil, class: 'col-lg-2 control-label' %>
    <div class="col-lg-10">
      <%= f.select :status, Subject::STATUS, {}, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-lg-10 col-offset-2">
      <%= f.submit nil, class: 'btn btn-primary' %>
      <%= cancel %>
    </div>
  </div>
<% end %>
