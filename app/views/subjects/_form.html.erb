<div class="page-header">
  <h1><%= @title %></h1>
</div>

<%= form_for @subject, html: { class: 'form-horizontal' } do |f| %>
  <% if @subject.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@subject.errors.count, "error") %> prohibited this subject from being saved:</h2>

      <ul>
      <% @subject.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="control-group">
    <%= f.label :project_id, nil, class: 'control-label' %>
    <div class="controls">
      <%= f.select :project_id, [['---', nil]] + Project.current.collect{|p| [p.name, p.id]} %>
    </div>
  </div>

  <div class="control-group">
    <%= label_tag 'site_id', 'Site', class: 'control-label' %>
    <div class="controls" id="site">
      <%= @project = @subject.project; render partial: 'sites/selection' %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :subject_code, nil, class: 'control-label' %>
    <div class="controls">
      <%= f.text_field :subject_code %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, class: 'btn btn-primary' %>
    <%= cancel %>
  </div>
<% end %>
