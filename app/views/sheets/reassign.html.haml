- @title = "#{@sheet.name} Reassign"
- @menu_title = "#{@project.name} #{@title}"
- @breadcrumbs = []
- @breadcrumbs << [@sheet.subject.subject_code, [@project, @sheet.subject]]
- @breadcrumbs << [@sheet.adverse_event.name, [@project, @sheet.adverse_event]] if @sheet.adverse_event
- @breadcrumbs << [@sheet.subject_event.name, event_project_subject_path(@project, @sheet.subject, event_id: @sheet.subject_event.event, subject_event_id: @sheet.subject_event.id, event_date: @sheet.subject_event.event_date_to_param)] if @sheet.subject_event

- @subject = @sheet.subject
- content_for :container_class, "container-fluid"
- content_for :sidebar, render("subjects/sidebar")

- content_for :header do
  = link_to @sheet.name, [@project, @sheet]
  Reassign

.dashboard-container
  = form_with url: reassign_project_sheet_path(@project, @sheet), method: :patch, local: true do |form|
    .form-group.row
      = label_tag :subject_id, "Reassign To Subject", class: "col-md-2 col-form-label"
      .col-md-10
        = select_tag :subject_id, options_for_select(@project.subjects.order(:subject_code).pluck(:subject_code, :id), @sheet.subject_id), class: "form-control chosen-select"

    .form-group.row
      .col-md-2
      .col-md-10
        = submit_tag "Reassign to Subject", class: "btn btn-primary", name: nil
        = link_to "Cancel", [@project, @sheet], class: "btn btn-light"
