.row
  .col-sm-3.col-xs-6
    %h4= ENV['website_name']
    %ul.list-unstyled
      %li= link_to 'About', about_path
  - if current_user
    .col-sm-3.col-xs-6
      %h4 Projects
      %ul.list-unstyled
        %li= link_to 'My Projects', projects_path

    .col-sm-3.col-xs-6
      %h4 Recent Activity
      %ul.list-unstyled
        %li= link_to 'Activity Overview', activity_path
  - else
    .col-sm-3.col-xs-6
      %h4 Register
      %ul.list-unstyled
        %li
          = link_to new_user_registration_path do
            %span.hidden-xs New User Registration
            %span.visible-xs Sign Up

    .col-sm-3.col-xs-6
      %h4
        %span.hidden-xs Trouble Logging In?
        %span.visible-xs Password
      %ul.list-unstyled
        %li
          = link_to new_user_password_path do
            %span.hidden-xs I Forgot My Password!
            %span.visible-xs Reset
  .col-sm-3.col-xs-6
    %h4 Support
    %ul.list-unstyled
      %li= link_to 'Contact Us', contact_path

%h4{ style: 'margin-top:20px' } &copy; 2015 Division of Sleep And Circadian Disorders

