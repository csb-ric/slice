- @title = @treatment_arm.name

- links = []
- links << [@randomization_scheme.name, [@project, @randomization_scheme]]
- links << ['Treatment Arms', project_randomization_scheme_treatment_arms_path(@project, @randomization_scheme)]
- links << [@treatment_arm.name, [@project, @randomization_scheme, @treatment_arm]]
= render 'projects/tabbed_menu', links: links

.mini-menu-outer
  .mini-menu-left-fixed
    = render 'projects/menu_mini'
  .mini-menu-right-fluid

    %h2.underline-header
      = @title
      - if @randomization_scheme.published?
        = link_to 'Randomization Scheme Published', '#', data: { object: 'suppress-click' }, class: 'btn btn-xs btn-primary', disabled: true
      - else
        = link_to 'Edit Treatment Arm', edit_project_randomization_scheme_treatment_arm_path(@project, @randomization_scheme, @treatment_arm), class: 'btn btn-default btn-xs'
        = link_to 'Delete Treatment Arm', [@project, @randomization_scheme, @treatment_arm], method: :delete, class: 'btn btn-xs btn-danger-inverse', data: { confirm: "Are you sure you want to delete Treatment Arm #{@treatment_arm.name}?" }

    %dl.dl-horizontal

      %dt Creator
      %dd= link_to @treatment_arm.user.name, @treatment_arm.user if @treatment_arm.user

      %dt Allocation
      %dd= @treatment_arm.allocation
