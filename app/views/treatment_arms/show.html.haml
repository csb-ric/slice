- @title = @randomization_scheme.name
.page-header
  %h1
    = link_to @project.name, setup_project_path(@project)
    &middot;
    = link_to @randomization_scheme.name, [@project, @randomization_scheme]
    &middot;
    = link_to 'Treatment Arms', project_randomization_scheme_treatment_arms_path(@project, @randomization_scheme)
    &middot;
    = @title
  = link_to "Edit Treatment Arm", edit_project_randomization_scheme_treatment_arm_path(@project, @randomization_scheme, @treatment_arm), class: 'btn btn-default btn-xs'
  = link_to "Delete Treatment Arm", [@project, @randomization_scheme, @treatment_arm], method: :delete, class: 'btn btn-xs btn-danger-inverse', data: { confirm: "Are you sure you want to delete Treatment Arm #{@treatment_arm.name}?" }

%dl.dl-horizontal

  %dt Creator
  %dd= link_to @treatment_arm.user.name, @treatment_arm.user if @treatment_arm.user

  %dt Allocation
  %dd= @treatment_arm.allocation
