- @title = 'Randomizations'
- @menu_title = "#{@project.name} #{@title}"

= render 'projects/side_nav'

- content_for :header do
  .background-gradient
  .header-container
    .container
      %h1.page-heading
        .pull-right
          - if @project.site_or_project_editor? current_user
            = link_to 'Randomize Subject', choose_scheme_project_randomizations_path(@project), class: 'btn btn-accent btn-shadow'
          = link_to export_project_randomizations_path, class: 'btn btn-default' do
            %span.glyphicon.glyphicon-download-alt
            Export CSV
        = render 'layouts/side_nav_header_button'
        = @title

        .per-page
          = render 'layouts/per_page', per_page: 40, object_count: @randomizations.total_count

= render 'randomizations/randomizations'
