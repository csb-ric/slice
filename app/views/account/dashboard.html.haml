- @title = 'Dashboard'

- content_for :header do
  .background-gradient
  .header-container
    .container
      %h1.page-heading
        = @title
        .pull-right
          = succeed ' ' do
            = link_to new_project_path, class: 'btn btn-success-inverse' do
              Create
              %strong.btn-text-emphasis Project
          - if current_user.all_archived_projects.count > 0
            = link_to archives_path, class: 'btn btn-default' do
              / %i.fa.fa-archive{ aria: { hidden: 'true' } }
              %span.glyphicon.glyphicon-briefcase{ aria: { hidden: 'true' } }

- if @favorited_projects.count > 0
  %h2.text-white.text-shadow Favorites
  %div{ data: { object: 'projects-sortable', page: [params[:page].to_i, 1].max, category: 'favored' } }
    - @favorited_projects.each do |project|
      = render 'projects/beta/splash_project_box', project: project, favorited: true, archived: false, sortable: true

- if @current_projects.count > 0
  %h2.text-white.text-shadow Current Projects
  - @current_projects.each do |project|
    = render 'projects/beta/splash_project_box', project: project, favorited: false, archived: false, sortable: false

- if @projects.total_count > @projects.count
  .dashboard-container
    .center
      = paginate @projects, theme: 'bootstrap'
