<% @design = @sheet.design if not @design and (@sheet and @sheet.design) %>

<% if @design %>
  <% section = @design.sections.find_by_name( @option[:section_name] ) %>
  <% if section and section.image.url %>
    <% if params[:header] == '0' %>
      <% full_url = survey_section_image_path(@design.slug, section) %>
    <% else %>
      <% full_url = image_project_design_section_path(@project, @design, section) %>
    <% end %>
    <%= image_tag full_url, style: 'max-width:100%' %>
  <% end %>
<% end %>
