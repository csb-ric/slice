- missing_responses = responses.select(&:blank?)
- valid_responses = responses.reject(&:blank?).map(&:to_i).sort
- valid_sheets = sheet_scope.with_stratum(current_user, variable, nil, 'any')
- no_responses = valid_responses.count.zero?

- unless no_responses
  .text-center{ style: 'display: none;font-size: 48px;margin-bottom: 20px;', data: { object: 'sparkline', type: 'box', values: valid_responses } }

%table.table.table-fixed.table-borderless
  %thead
    %tr
      %th.text-center N
      %th.text-center Mean
      %th.text-center.hidden-xs StdDev
      %th.text-center Med
      %th.text-center Min
      %th.text-center Max
      %th.text-center.text-muted.hidden-xs Missing
      %th.text-center Total
  %tbody
    %tr
      %td.text-center= filter_link Statistics.array_count(valid_responses), @design, variable, ':any', event_id: event_id
      %td.text-center
        - mean = Sheet.array_calculation(valid_sheets, variable, 'array_mean')
        - if mean
          - height = parse_imperial_height(mean.to_i)
          = "#{"#{height[:feet]}ft " unless height[:feet].zero?}#{"#{height[:inches]}in" if height[:feet].zero? || !height[:inches].zero?}"
        - else
          \-
      %td.text-center.nowrap.hidden-xs
        - stdev = Sheet.array_calculation(valid_sheets, variable, 'array_standard_deviation')
        - if stdev
          - height = parse_imperial_height(stdev.to_i)
          &plusmn;
          = "#{"#{height[:feet]}ft " unless height[:feet].zero?}#{"#{height[:inches]}in" if height[:feet].zero? || !height[:inches].zero?}"
        - else
          \-
      %td.text-center
        - inches = Sheet.array_calculation(valid_sheets, variable, 'array_median')
        = render 'reports/designs/overview/links/imperial_height_link', design: @design, variable: variable, inches: inches, event_id: event_id
      %td.text-center
        - inches = Sheet.array_calculation(valid_sheets, variable, 'array_min')
        = render 'reports/designs/overview/links/imperial_height_link', design: @design, variable: variable, inches: inches, event_id: event_id
      %td.text-center
        - inches = Sheet.array_calculation(valid_sheets, variable, 'array_max')
        = render 'reports/designs/overview/links/imperial_height_link', design: @design, variable: variable, inches: inches, event_id: event_id
      %td.text-center.hidden-xs= filter_link Statistics.array_count(missing_responses), @design, variable, ':missing', event_id: event_id
      %td.text-center= filter_link Statistics.array_count(responses), @design, nil, nil, event_id: event_id
