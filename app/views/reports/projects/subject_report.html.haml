- @title = 'Subject Report'
- @menu_title = "#{@project.name} #{@title}"
- @breadcrumbs = []
- @breadcrumbs << ['Reports', reports_reports_project_path(@project)]

= render 'projects/side_nav'

- content_for :header do
  .header-container
    .container
      %h1.page-heading
        .pull-right
          .per-page= render 'layouts/per_page', per_page: 40, object_count: @subjects.total_count
        = render 'layouts/side_nav_header_button'
        %span= @title

= render 'reports/projects/subject_report'
