%td= link_to check.name, editor_project_check_path(@project, check)
%td.d-none.d-sm-table-cell.text-center= simple_check check.archived?
%td
  .dropdown
    = link_to "#", class: "btn btn-light btn-sm dropdown-toggle", data: { toggle: "dropdown" } do
      Actions
      %strong.caret

    %ul.dropdown-menu.dropdown-menu-right
      %li
        = link_to edit_editor_project_check_path(@project, check) do
          %i.fa.fa-pencil
          Edit
      %li
        = link_to editor_project_check_path(@project, check, check: { archived: check.archived? ? "0" : "1" }), method: :patch, remote: true do
          %i.fa.fa-archive
          - if check.archived?
            Restore
          - else
            Archive
      %li.divider{ role: "separator" }
      %li
        = link_to editor_project_check_path(@project, check), method: :delete, remote: true, data: { confirm: "Delete \"#{check.name}\" check?" } do
          .text-danger
            %i.fa.fa-trash
            Delete
