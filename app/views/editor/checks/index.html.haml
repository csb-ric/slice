- @title = 'Checks'
- @menu_title = "#{@project.name} #{@title}"

= render 'projects/side_nav'

- content_for :header do
  .background-gradient
  .header-container
    .container
      %h1.page-heading
        .pull-right
          = link_to plus_or('New Check'), new_editor_project_check_path(@project), class: 'btn btn-accent btn-shadow'
          .per-page= render 'layouts/per_page', per_page: 40, object_count: @checks.total_count
        = render 'layouts/side_nav_header_button'
        %span.nowrap= @title

.dashboard-container
  %table.table.table-striped.table-borderless.table-hover
    %col
    %col.hidden-xs
    %col{ width: '1px' }
    %thead
      %tr
        %th Name
        %th.hidden-xs.center Archived
        %th Actions

    %tbody
      - @checks.each do |check|
        %tr{ id: "check-#{check.id}-container" }
          = render 'editor/checks/check_row', check: check

.docs-learn-more
  Learn about
  = succeed '.' do
    = link_to 'checks', docs_checks_path
