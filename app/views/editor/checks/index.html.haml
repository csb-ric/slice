- @title = 'Checks'
- @menu_title = "#{@project.name} #{@title}"

= render 'projects/side_nav'

- content_for :header do
  .background-gradient
  .header-container
    .container
      %h1.page-heading
        .pull-right
          = link_to plus_or('New Check'), new_editor_project_check_path(@project), class: 'btn btn-accent btn-shadow'
          .per-page= render 'layouts/per_page', per_page: 40, object_count: @checks.total_count
        = render 'layouts/side_nav_header_button'
        %span.nowrap= @title

.dashboard-container
  %table.table.table-striped.table-borderless.table-hover
    %col
    %col.hidden-xs
    %col.hidden-xs
    %col{ width: '1px' }
    %thead
      %tr
        %th Name
        %th.hidden-xs Archived
        %th.hidden-xs Creator
        %th Actions

    %tbody
      - @checks.each do |check|
        %tr
          %td= link_to check.name, editor_project_check_path(@project, check)
          %td.hidden-xs= simple_check check.archived?
          %td.hidden-xs= check.user.name
          %td
            = render 'layouts/edit_delete_dropdown', edit_url: edit_editor_project_check_path(@project, check), delete_url: editor_project_check_path(@project, check), delete_confirmation: "Are you sure you want to delete check #{check.name}?"
