- @title = @medication_variable.name
- @menu_title = "#{@project.name} #{@title}"

- content_for :sidebar, render("projects/sidebar")

- content_for :header do
  .float-right
    = render "layouts/edit_delete_dropdown_lg", edit_url: edit_editor_project_medication_variable_path(@project, @medication_variable), delete_url: editor_project_medication_variable_path(@project, @medication_variable), delete_confirmation: "Delete #{@medication_variable.name}?"
  = @title

- content_for :breadcrumbs do
  %ol
    %li= link_to "medications module", settings_editor_project_path(@project, anchor: "medications")
    %li= link_to "medication variables", editor_project_medication_variables_path(@project)
    %li.breadcrumb-muted= @medication_variable.name.downcase

.dashboard-container
  = render "forms/horizontal/show/text", object: @medication_variable, key: :name
  = render "forms/horizontal/show/generic", title: "Autocomplete values", content: render("editor/medication_variables/autocomplete_values", medication_variable: @medication_variable)
