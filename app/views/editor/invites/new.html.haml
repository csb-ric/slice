- @title = "Team"
- @menu_title = "#{@project.name} #{@title}"

- content_for :sidebar, render("projects/sidebar")
- content_for :header, @title
- content_for :breadcrumbs do
  %ol
    %li= link_to "team", project_team_path(@project)
    %li= link_to "invites", editor_project_invites_path(@project)
    %li.breadcrumb-muted new

- if @project.editable_by?(current_user)
  .dashboard-container= render "editor/invites/form", project: @project, invite: @invite

.center-horizontally
  .docs-learn-more
    Learn about
    = succeed "." do
      = link_to "roles", docs_roles_path
