- @title = "Filters - #{@check.name}"

- links = []
- links << ['Checks', editor_project_checks_path(@project)]
- links << [@check.name, editor_project_check_path(@project, @check)]
- links << ['Filters', editor_project_check_check_filters_path(@project, @check)]
= render 'projects/tabbed_menu', links: links

.mini-menu-outer
  .mini-menu-left-fixed
    = render 'projects/menu_mini'
  .mini-menu-right-fluid
    %h2.underline-header
      = @title
      = link_to 'Create Filter', new_editor_project_check_check_filter_path(@project, @check), class: 'btn btn-xs btn-primary'
      .per-page
        = render 'layouts/per_page', per_page: 40, object_count: @check_filters.total_count

    %table.table.table-striped
      %thead
        %tr
          %th Name
          %th Filter
          %th Operator
          %th Creator
          %th Actions

      %tbody
        - @check_filters.each do |check_filter|
          %tr
            %td= link_to check_filter.name, editor_project_check_check_filter_path(@project, @check, check_filter)
            %td
              = check_filter.filter_type
              %br
              = check_filter.variable_id
            %td= check_filter.operator
            %td= check_filter.user.name
            %td
              = link_to 'Edit', edit_editor_project_check_check_filter_path(@project, @check, check_filter), class: 'btn btn-xs btn-default'
              = link_to 'Destroy', editor_project_check_check_filter_path(@project, @check, check_filter), method: :delete, data: { confirm: "Are you sure you want to delete filter #{check_filter.name}?" }, class: 'btn btn-xs btn-danger-inverse'
