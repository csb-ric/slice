%ul.left-navigation
  %li
    = link_to 'Overview', @project, class: "#{'active' if current_page?(project_path(@project))}"
    %ul
      %li= link_to 'Subjects', project_subjects_path(@project), class: "#{'active' if current_page?(project_subjects_path(@project))}"
      %li= link_to 'Sheets', project_sheets_path(@project), class: "#{'active' if current_page?(project_sheets_path(@project))}"
      - if current_page?(project_sheets_path(@project))
        %li= link_to 'Export Data', '#', data: { object: 'show-contour-modal' }
      - else
        %li= link_to 'Export Data', project_sheets_path(@project, e: '1')
      %li= link_to 'Recent Activity', activity_project_path(@project), class: "#{'active' if current_page?(activity_project_path(@project))}"
  %li
    = link_to 'Collaborators', share_project_path(@project), class: "#{'active' if current_page?(share_project_path(@project))}"
  - if @project.editable_by?(current_user)
    %li
      = link_to 'Settings', setup_project_path(@project), class: "#{'active' if current_page?(setup_project_path(@project))}"
      %ul
        %li= link_to 'Designs', project_designs_path(@project), class: "#{'active' if current_page?(project_designs_path(@project))}"
        %li= link_to 'Events', project_events_path(@project), class: "#{'active' if current_page?(project_events_path(@project))}"
        %li= link_to 'Randomization Schemes', project_randomization_schemes_path(@project), class: "#{'active' if current_page?(project_randomization_schemes_path(@project))}"
        %li= link_to 'Randomizations', project_randomizations_path(@project), class: "#{'active' if current_page?(project_randomizations_path(@project))}"
