<% @title = "Summary Report" %>
<div class="page-header">
  <h1>
    <%= link_to @project.name, @project %> &middot; <%= @title %>
  </h1>
</div>

<%= form_tag report_project_path(@project), method: :post, remote: true, data: { object: 'form-load' }, class: "form-inline", id: 'report_form' do %>

  <label>Subjects</label>
  <%= render partial: 'layouts/checkbox_button_group', locals: { name: 'statuses', options: Subject::STATUS, selected: @statuses } %>

  &middot; <label>By</label>
  <%= render partial: 'layouts/radio_button_group', locals: { name: 'by', options: [['Week', 'week'], ['Month', 'month'], ['Year', 'year']], selected: @by } %>

  &middot; <label>Percent</label>
  <%= render partial: 'layouts/radio_button_group', locals: { name: 'percent', options: [['No Percents', 'none'], ['% by Row', 'row'], ['% by Column', 'column']], selected: @percent } %>

  &middot; <div class="btn-group">
    <%= link_to 'Export <b class="caret"></b>'.html_safe, '#', class: 'dropdown-toggle btn btn-default btn-xs', data: { toggle: 'dropdown' } %>
    <ul class="dropdown-menu">
      <li><%= link_to 'CSV', '#', data: { object: 'export', format: 'csv', target: '#report_form' } %></li>
      <li><%= link_to 'PDF - Portrait', '#', data: { object: 'export-report-pdf', orientation: 'portrait', target: '#report_form' } %></li>
      <li><%= link_to 'PDF - Landscape', '#', data: { object: 'export-report-pdf', orientation: 'landscape', target: '#report_form' } %></li>
    </ul>
  </div>
  <button type="submit" class="btn btn-primary btn-xs">Refresh</button>

<% end %>

<hr class="soften" style="margin-top:20px;margin-bottom:54px">

<div id="report"><div class="center"><%= image_tag "contour/ajax-loader.gif" %></div></div>
