- @title = 'Projects'

- content_for :header do
  .background-gradient
  .header-container
    .container
      %h1.page-heading
        .pull-right
          = link_to plus_or('New Project'), new_project_path, class: 'btn btn-accent btn-shadow'
          .per-page= render 'layouts/per_page', per_page: 40, object_count: @projects.total_count
        = @title
        %small
          = link_to '#', data: { object: 'toggle-search-container', target: '#search' } do
            %span.glyphicon.glyphicon-search

.search-container-relative
  .search-container
    = form_tag projects_path, method: :get, class: 'form-vertical' do
      .form-group{ style: 'margin: 0;' }
        .input-group.text-left
          = text_field_tag 'search', params[:search], class: 'form-control', placeholder: 'Search Projects', autocomplete: 'off'
          %span.input-group-btn{ style: 'vertical-align: bottom;' }
            = submit_tag 'Search', class: 'btn btn-default', name: nil

= render 'projects/projects'
