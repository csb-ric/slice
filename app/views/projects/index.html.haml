- @title = 'Projects'

- content_for :header do
  .background-gradient
  .header-container
    .container
      %h1.page-heading
        .pull-right
          = link_to plus_or('Create Project'), new_project_path, class: 'btn btn-accent btn-shadow'
          .per-page= render 'layouts/per_page', per_page: 40, object_count: @projects.total_count
        = @title

= render 'projects/projects'

.jumbotron
  = form_tag projects_path, method: :get, class: 'form-inline' do
    = hidden_field_tag :order, params[:order]
    .input-group
      = text_field_tag 'search', params[:search], class: 'form-control'
      %span.input-group-btn
        = submit_tag 'Search', class: 'btn btn-accent', name: nil
