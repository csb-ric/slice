- @title = 'Collaborators'
- @menu_title = "#{@project.name} #{@title}"

= render 'projects/side_nav'
= render 'layouts/simple_header'

- if @project.editable_by?(current_user)
  .jumbotron
    = form_tag invite_user_editor_project_path(@project), method: :post, remote: true, class: 'form-inline' do
      %strong Invite User
      .form-group
        = text_field_tag :invite_email, '', autocomplete: 'off', class: 'form-control', placeholder: 'Email Address', data: { object: 'typeahead-users' }

      .form-group
        = select_tag 'site_id', options_for_select([[@project.name, nil]] + @project.sites.order(:name).collect{|s| ["-- #{s.name}", s.id]}), class: 'form-control'

      .form-group
        %label.btn.btn-default
          = check_box_tag 'editor', '1', true
          Editor

      - if @project.unblinded?(current_user)
        .form-group{ style: "#{'display:none' unless @project.blinding_enabled?}" }
          %label.btn.btn-default
            = check_box_tag 'unblinded', '1', true
            Unblinded

      .form-group
        = submit_tag 'Invite By Email', class: 'btn btn-primary'

#project-members
  = render 'projects/members'

.dashboard-container
  %table.table.table-fixed
    %thead
      %tr
        %th Roles
        %th Create Designs, Variables, Sites, Events
        %th Create Sheets, Subjects
        %th View Sheets, Subjects
        %th Comment on Sheets
      %tr
        %td Project Editor
        %td.success Yes
        %td.success Yes
        %td.success Yes
        %td.success Yes
      %tr
        %td Project Viewer
        %td.danger No
        %td.danger No
        %td.success Yes
        %td.success Yes
      %tr
        %td Site Editor
        %td.danger No
        %td.success Yes*
        %td.success Yes*
        %td.success Yes*
      %tr
        %td Site Viewer
        %td.danger No
        %td.danger No
        %td.success Yes*
        %td.success Yes*

  \* Only for subjects on the site member's site
  = link_to 'Read about Roles', docs_roles_path
