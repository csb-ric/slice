<hr class="soften" style="margin-top:20px">
<% if @project.domains.size == 0 %>
  <ul><li class="muted">No Domains</li></ul>
<% else %>
  <ul>
  <% @project.domains.limit(10).order('updated_at').each do |domain| %>
    <li style="line-height:25px" data-object="hover-show" data-target="#domain_<%= domain.id %>_edit_link">
      <%= link_to domain.name, [domain.project, domain] %>
      <%= link_to 'edit', edit_project_domain_path(domain.project, domain), class: 'btn btn-default btn-mini', id: "domain_#{domain.id}_edit_link", style: 'display:none' %>
    </li>
  <% end %>
  </ul>
<% end %>
