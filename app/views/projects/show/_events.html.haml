- title = 'Events'
- if @project.events.size == 0
  %h2.about-title= title
  = link_to 'Create Event', new_project_event_path(@project), class: 'btn btn-block btn-lg btn-primary'
- else
  %h2.about-title= link_to title, project_events_path(@project)

  %hr.divider-md

  %table.table.table-hover.table-condensed
    %thead
      %tr
        %th Event
        %th Actions
    %tbody
      %tr{ style: 'cursor:pointer', data: { link: new_project_event_path(@project) } }
        %td.center{ colspan: 2 }
          = link_to 'Create Event', new_project_event_path(@project)
      - @project.events.order('name').limit(10).each do |event|
        %tr{ style: 'cursor:pointer', data: { link: project_event_path(event.project, event), object: 'hover-show', target: "#event_#{event.id}_edit_link" } }
          %td= event.name
          %td
            %div{ style: 'height:22px' }
              = link_to 'Edit', edit_project_event_path(event.project, event), class: 'btn btn-default btn-xs', id: "event_#{event.id}_edit_link", style: 'display:none'
      %tr{ style: 'cursor:pointer', data: { link: project_events_path(@project) } }
        %td.center{ colspan: 2 }
          = link_to "View More", project_events_path(@project)
          - if @project.events.count > 0
            %span.badge.badge-info= @project.events.count
