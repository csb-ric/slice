- @title = @medication.name
- @menu_title = "#{@project.name} #{@subject.name} #{@title}"

- content_for :sidebar, render("subjects/sidebar")
- content_for :header, @title
- content_for :breadcrumbs do
  %ol
    %li= link_to @subject.subject_code, [@project, @subject]
    %li= link_to "medications", project_subject_medications_path(@project, @subject)
    %li= link_to @medication.name.to_s.downcase, [@project, @subject, @medication]
    %li.breadcrumb-muted review

.dashboard-container
  .alert.alert-primary
    Is participant still taking...

  = render "forms/horizontal/show/text", object: @medication, key: :name

  %table.table.table-sm.table-borderless.table-striped
    %col{ width: "1px" }
    - @project.medication_variables.each do |medication_variable|
      - medication_value = @medication.medication_values.find_by(medication_variable: medication_variable)
      - if medication_value
        = render "forms/horizontal/show/generic", title: medication_variable.name, content: medication_value&.value

= link_to plus_or("YES"), still_taking_project_subject_medication_path(@project, @subject, @medication), method: :post, class: "btn btn-primary btn-shadow"

= link_to plus_or("NO SOMETHING CHANGED"), something_changed_project_subject_medication_path(@project, @subject, @medication), class: "btn btn-outline-primary btn-shadow"

= link_to plus_or("NO STOPPED COMPLETELY"), stopped_completely_project_subject_medication_path(@project, @subject, @medication), class: "btn btn-outline-primary btn-shadow"
