- @title = 'Designs'

= render 'projects/tabbed_menu', links: [['Designs', project_designs_path(@project)]]


.mini-menu-outer
  .mini-menu-left-fixed
    = render 'projects/menu_mini'
  .mini-menu-right-fluid
    %h2.underline-header
      = @title
      = link_to 'Create Design', new_project_design_path(@project), class: 'btn btn-xs btn-primary'
      = link_to 'Create Design from Import', imports_new_project_designs_path(@project), class: 'btn btn-xs btn-primary'
      = link_to 'View Categories', project_categories_path(@project), class: 'btn btn-xs btn-default'
      .per-page
        = render 'contour/layouts/per_page', per_page: 40, object_count: @designs.total_count


    = render 'designs/designs'

    .jumbotron
      = form_tag project_designs_path(@project), method: :get, class: 'form-vertical' do
        = hidden_field_tag :order, params[:order]

        .form-group
          = label :search, 'Search', class: 'control-label'
          = text_field_tag 'search', params[:search], class: 'form-control'

        .form-group
          = label :user_id, 'Creator', class: 'control-label'
          = select_tag 'user_id', options_for_select([['---', nil]] + User.where( id: @project.designs.select(:user_id) ).order('last_name, first_name').collect{|u| [u.reverse_name, u.id]}, params[:user_id]), class: 'form-control'

        .form-group
          = submit_tag 'Search', class: 'btn btn-primary', name: nil
          = link_to 'Reset', project_designs_path(@project), class: 'btn btn-default'
