<%= render partial: 'layouts/per_page', locals: { type: 'designs', per_page: 20, object_count: @designs.total_count } %>

<table class="table table-striped table-bordered" style="width:100%">
  <thead>
    <tr>
      <th style="white-space:nowrap"><%== sort_field_helper(@order, 'designs.name', 'Name', 'designs_search') %></th>
      <th style="white-space:nowrap">Variables</th>
      <th style="white-space:nowrap"><%== sort_field_helper(@order, 'designs.user_name', 'Creator', 'designs_search') %></th>
      <th>Actions</th>
    </tr>
  </thead>

  <% @designs.each do |design| %>
    <tr id="design_<%= design.id %>">
      <td><%= link_to design.name, [design.project, design] %></td>
      <td><%= design.variable_ids.count %></td>
      <td><%= link_to design.user.name, design.user if design.user %></td>
      <td>
        <%= link_to 'Copy', copy_project_design_path(design.project, design), class: 'btn btn-default btn-mini' %>
        <% if design.editable_by?(current_user) %>
          <%= link_to 'Edit', edit_project_design_path(design.project, design), class: 'btn btn-default btn-mini' %>
          <%= link_to 'Delete', [design.project, design], method: :delete, remote: true, class: 'btn btn-mini btn-danger-inverse', data: { confirm: "Are you sure you want to delete Design #{design.name}?" } %>
        <% end %>
      </td>
    </tr>
  <% end %>
</table>

<div class="center"><%= paginate @designs, theme: "contour" %></div>
