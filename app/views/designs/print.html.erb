<!DOCTYPE html>
<html>
<head>
  <title><%= [Contour.application_name, @title].compact.join(' - ').html_safe %></title>
  <%= stylesheet_link_tag "application", media: 'all' %>
</head>
<body style="padding-top:0px">
<table class="table table-striped table-bordered" style="width:100%">
  <thead>
    <tr>
      <th><%= @design.name %></th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td><%= simple_format @design.description %></td>
    </tr>
  </tbody>
</table>

<table class="table table-striped table-bordered" style="width:100%">
  <tbody>
  <% @design.options.each_with_index do |option, index| %>
    <% @option = option %>
    <% if @option[:variable_id].blank? %>
      <% unless index == 0 %></tbody></table><table class="table table-striped table-bordered" style="width:100%"><tbody><% end %>
      <tr><td colspan="2"><h4><%= @option[:section_name] %></h4></td></tr>
    <% elsif @variable = Variable.current.find_by_id(@option[:variable_id]) %>
      <% unless @variable.header.blank? %>
        <tr><td colspan="2" style="padding-left:20px"><i><%= @variable.header %></i></td></tr>
      <% end %>
      <tr>
        <td style="padding-left:40px"><%= @variable.display_name %></td>
        <td>
          <% if @variable.variable_type == 'date' %>
            ____ /____ /________ <span class="muted">MM / DD / YYYY</span>
          <% elsif ['checkbox'].include?(@variable.variable_type) %>
            <% @variable.options.each do |option| %>
              <span style="white-space:nowrap;margin-right:20px"><%= check_box_tag "variable_#{@variable.id}_#{option[:value]}" %> <%= option[:value] %>: <%= option[:name] %></span>
            <% end %>
          <% elsif ['radio','dropdown'].include?(@variable.variable_type) %>
            <% @variable.options.each do |option| %>
              <span style="white-space:nowrap;margin-right:20px"><%= radio_button_tag "variable_#{@variable.id}", option[:value] %> <%= option[:value] %>: <%= option[:name] %></span>
            <% end %>
          <% else %>
            <%#= @variable.response_name(@sheet) %>
          <% end %>
        </td>
      </tr>
    <% end %>
  <% end %>
  </tbody>
</table>
</body>
