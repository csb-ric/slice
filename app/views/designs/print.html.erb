<!DOCTYPE html>
<html>
<head>
  <title><%= [Contour.application_name, @title].compact.join(' - ').html_safe %></title>
  <%= stylesheet_link_tag "application", media: 'all' %>
</head>
<body style="padding-top:0px">
<table class="table table-striped table-bordered" style="width:100%">
  <thead>
    <tr>
      <th>Design</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td><%= @design.name %></td>
    </tr>
  </tbody>
</table>

<%= simple_format @design.description %>

<table class="table table-striped table-bordered">
  <tbody>
  <% @design.variables.each_with_index do |variable, index| %>

    <% unless variable.header.blank? %>
      <% unless index == 0 %></tbody></table><table class="table table-striped table-bordered"><tbody><% end %>
      <tr><td colspan="2"><h4><%= variable.header %></h4></td></tr>
    <% end %>

    <tr>
    <td><%= variable.display_name %></td>
    <td>
      <% if variable.variable_type == 'date' %>
        ____/____/________
      <% elsif ['checkbox'].include?(variable.variable_type) %>
        <% variable.options.each do |option| %>
          <span style="white-space:nowrap;margin-right:20px"><%= check_box_tag "variable_#{variable}_#{option[:value]}" %> <%= option[:value] %>: <%= option[:name] %></span>
        <% end %>
      <% elsif ['radio','select'].include?(variable.variable_type) %>
        <% variable.options.each do |option| %>
          <span style="white-space:nowrap;margin-right:20px"><%= radio_button_tag "variable_#{variable}", option[:value] %> <%= option[:value] %>: <%= option[:name] %></span>
        <% end %>
      <% else %>
        <%#= variable.response_name(@sheet) %>
      <% end %>
    </td>
    </tr>
  <% end %>
  </tbody>
</table>
</body>
