<!DOCTYPE html>
<html>
<head>
  <title><%= [Contour.application_name, @title].compact.join(' - ').html_safe %></title>
  <%= stylesheet_link_tag "application", media: 'all' %>
</head>
<body style="padding-top:0px">

  <div class="page-header">
    <h1><%= @design.name %></h1>
  </div>
  <p style="margin-bottom:18px;line-height:26px; color: #999; font-weight:300;font-size:18px;text-align:left"><%= @design.description %></p>

  <table class="table table-striped table-bordered" style="width:100%"><col width="25%"/><col width="75%"/>
    <tbody>
    <% @design.options.each_with_index do |option, index| %>
      <% @option = option %>
      <% if @option[:variable_id].blank? %>
        <% unless index == 0 %></tbody></table><table class="table table-striped table-bordered" style="width:100%"><col width="25%"/><col width="75%"/><tbody><% end %>
        <tr><td colspan="2"><h4><%= @option[:section_name] %></h4></td></tr>
      <% elsif @variable = Variable.current.find_by_id(@option[:variable_id]) %>
        <% unless @variable.header.blank? %>
          <tr><td colspan="2" style="padding-left:20px"><i><%= @variable.header %></i></td></tr>
        <% end %>
        <tr>
          <td style="padding-left:40px"><%= @variable.display_name %></td>
          <td>
            <% if @variable.variable_type == 'date' %>
              ____ /____ /________ <span class="muted">MM / DD / YYYY</span>
            <% elsif ['checkbox'].include?(@variable.variable_type) or (@variable.variable_type == 'scale' and @variable.scale_type == 'checkbox') %>
              <% @variable.options_without_missing.each do |option| %>
                <p style="white-space:nowrap"><%= check_box_tag "variable_#{@variable.id}_#{option[:value]}" %> <%= option[:value] %>: <%= option[:name] %></p>
              <% end %>
            <% elsif ['radio','dropdown'].include?(@variable.variable_type) or (@variable.variable_type == 'scale' and @variable.scale_type == 'radio') %>
              <% @variable.options_without_missing.each do |option| %>
                <p style="white-space:nowrap"><%= radio_button_tag "variable_#{@variable.id}", option[:value] %> <%= option[:value] %>: <%= option[:name] %></p>
              <% end %>
            <% else %>
              <%#= @variable.response_name(@sheet) %>
            <% end %>
          </td>
        </tr>
      <% end %>
    <% end %>
    </tbody>
  </table>
</body>
