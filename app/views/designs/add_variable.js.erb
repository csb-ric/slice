<% @all_viewable_variables = current_user.all_viewable_variables %>
<% @select_variables = @all_viewable_variables.order(:project_id, :name).collect{|v| [v.name_with_project, v.id]} %>

<% if params[:location] == 'top' %>
  $("#variables").prepend("<%= escape_javascript(render("edit_variable")) %>");
<% elsif params[:location].to_i > 0 %>
  $("#variable_<%= params[:location] %>").after("<%= escape_javascript(render("edit_variable")) %>");
<% else %>
  $("#variables").append("<%= escape_javascript(render("edit_variable")) %>");
<% end %>

$('#design_option_tokens_<%= @position %>_variable_id.chzn-select').chosen();
$('#variable_<%= @position %>').click();
