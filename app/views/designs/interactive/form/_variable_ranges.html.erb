<% @option = @design.options[params[:position].to_i] %>
<% @variable = @design.variable_at(params[:position].to_i) %>

<div class="page-header">
  <h1>Edit Variable Ranges<span style="font-size:0.4em"><%= @variable.name %></span></h1>
</div>

<form id="variable_form" class="form-horizontal">
  <% %w(hard_minimum hard_maximum soft_minimum soft_maximum).each do |range| %>
    <div class="control-group">
      <label class="control-label"><%= range.titleize %></label>
      <div class="controls">
        <%= text_field_tag "variable[#{range}]", @variable.send(range), style: 'width:95%', autocomplete: 'off' %>
      </div>
    </div>
  <% end %>
</form>

<hr class="soften" style="margin-top:20px;" />

<div class="button-group pull-right">
  <%= button_tag 'Update', data: { object: 'partial-update-submit', target: '#variable_form', path: interactive_popup_project_designs_path(@project, update: 'variable', position: params[:position]) }, class: 'btn btn-primary' %>
  <%= button_tag 'Cancel', data: { object: 'hide-contour-modal', position: params[:position] }, class: 'btn' %>
</div>
