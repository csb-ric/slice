<% @variable = @design.project.variables.find_by_id(params[:variable_id]) %>

<div class="modal-header">
  <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
  <h4 class="modal-title">
    Edit Variable Ranges &middot; <%= @variable.name %>
  </h4>
</div>
<div class="modal-body">

  <form id="variable_form" class="form-horizontal">

    <% %w(hard_minimum hard_maximum soft_minimum soft_maximum).each do |range| %>
      <div class="form-group">
        <label class="col-lg-2 control-label"><%= range.titleize %></label>
        <div class="col-lg-10">
          <%= text_field_tag "variable[#{range}]", @variable.send(range), data: { object: 'push-partial-change-text-field', target: '#variable_form', update: 'variable', position: params[:position], variable_id: @variable.id }, class: 'form-control', autocomplete: 'off' %>
        </div>
      </div>
    <% end %>

  </form>

</div>
<div class="modal-footer">
<%= button_tag 'Update', data: { object: 'push-partial-change', target: '#variable_form', update: 'variable', position: params[:position], variable_id: @variable.id }, class: 'btn btn-primary' %>
  <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
</div>
