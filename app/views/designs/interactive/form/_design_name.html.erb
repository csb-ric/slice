<div class="page-header">
  <h1>Edit Design Name</h1>
</div>

<div class="row-fluid">
  <%= text_field_tag "design[name]", @design.name, placeholder: 'Design Name', class: "span12" %>
</div>

<hr class="soften" style="margin-top:20px;" />

<div class="button-group pull-right">
  <%= button_tag 'Update', data: { object: 'push-partial-change', target: '#design_name', update: 'design_name' }, class: 'btn btn-primary' %>
  <%= button_tag 'Cancel', data: { object: 'hide-contour-modal' }, class: 'btn' %>
</div>
