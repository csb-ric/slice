<% @variable = @design.project.variables.find_by_id(params[:variable_id]) %>

<div class="page-header">
  <h1>Edit Variable Display Name <span style="font-size:0.4em"><%= @variable.name %></span></h1>
</div>

<div class="row-fluid">
  <%= text_field_tag "variable[display_name]", @variable.display_name, placeholder: 'Variable Display Name', class: "span12" %>
</div>

<hr class="soften" style="margin-top:20px;" />

<div class="button-group pull-right">
  <%= button_tag 'Update', data: { object: 'push-partial-change', target: '#variable_display_name', update: 'variable', position: params[:position], variable_id: @variable.id }, class: 'btn btn-primary' %>
  <%= button_tag 'Cancel', data: { object: 'hide-contour-modal', position: params[:position] }, class: 'btn' %>
</div>
