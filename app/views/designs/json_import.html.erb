<% @title = "JSON Design[s] Import" %>
<div class="page-header">
  <h1>
    <%= link_to @project.name, setup_project_path(@project) %> &middot; <%= @title %>
  </h1>
</div>

<%= form_tag json_import_create_project_designs_path(@project), method: :post, class: 'form-horizontal', multipart: true do %>
  <% if @error %>
    <div class="bs-callout bs-callout-danger">
      <h4>1 error prohibited this file from being imported</h4>

      <ul>
        <li><%= @error %></li>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= label_tag :json_file, 'Design[s] Import (JSON)', class: 'col-md-2 control-label' %>
    <div class="col-md-10">
      <%= file_field_tag :json_file, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-md-10 col-md-offset-2">
      <%= submit_tag "Import Design[s]", class: 'btn btn-primary' %>
      <%= link_to 'Cancel', project_designs_path(@project), class: 'btn btn-default' %>
    </div>
  </div>
<% end %>
