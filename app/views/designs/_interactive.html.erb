<div class="page-header">
  <h1><%= link_to @project.name, setup_project_path(@project) %> &middot; <%= link_to @design.name, [@design.project, @design] %> &middot; Edit</h1>
</div>

<div class="modal" id="interactive_design_modal">
  <div class="modal-dialog modal-wide-width">
    <div class="modal-content" id="interactive-design-container">
    </div>
  </div>
</div>

<div class="btn-toolbar">
  <div class="btn-group" data-toggle="buttons">
    <label class="btn btn-xs btn-default <%= 'active' if params[:mode] != 'preview' %>" data-object="edit-mode">
      <input type="radio" name="preview_modes" id="edit-mode">Edit <u>M</u>ode
    </label>
    <label class="btn btn-xs btn-default <%= 'active' if params[:mode] == 'preview' %>" data-object="preview-mode">
      <input type="radio" name="preview_modes" id="preview-mode">Preview <u>M</u>ode
    </label>
  </div>
  <%= link_to 'Reorder Mode', reorder_project_design_path(@project, @design), class: 'btn btn-xs btn-default' %>
</div>

<hr class="soften" style="margin-top:20px;" />

<%= hidden_field_tag :project_id, @project.id %>
<%= hidden_field_tag :design_id, @design.id %>


<div class="row">
  <div class="col-sm-6" data-object="design-preview-expand">
    <div class="page-header" style="margin-top:0px;padding-top:0px" id="design_name-container">
      <%= render partial: 'designs/interactive/show/design_name' %>
    </div>
  </div>
  <div class="col-sm-6 design-preview-hide">
    <h4 style="margin-top:0px">Design</h4>
    <div class="design-edit-box">
      <table class="table" style="margin-bottom:0px;table-layout:fixed"><col width="30%"/>
        <tr>
          <td style="border-top-width:0px">
            <strong>Actions</strong>
          </td>
          <td style="border-top-width:0px">
            <%= link_to 'Edit Name and Description', '#', data: { object: 'pull-partial-edit', edit: 'design_name' }, class: 'btn btn-xs btn-default design-preview-hide' %>
          </td>
        </tr>
      </table>
    </div>
  </div>
</div>

<div id="design-sections-and-variables-container">
  <%= render partial: 'designs/interactive/show/sections_and_variables' %>
</div>
