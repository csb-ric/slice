<% @title = 'Designs' %>
<div class="page-header">
  <h1>
    <%= link_to @project.name, setup_project_path(@project) %> &middot; <%= @title %>
    <%= link_to "Create Design", new_project_design_path(@project), class: 'btn btn-xs btn-primary' %>
    <%= link_to "Create Design from Import", import_project_designs_path(@project), class: 'btn btn-xs btn-primary' %>
  </h1>
</div>

<%= form_tag project_designs_path(@project), method: :get, id: "designs_search", class: 'form-vertical' do %>
  <%= hidden_field_tag :order, params[:order] %>
  <div class="row">
    <div class="col-md-4 form-group">
      <%= label :search, 'Search', class: 'col-md-2 control-label' %>
      <div class="col-md-10">
        <%= text_field_tag 'search', params[:search], class: 'form-control', data: { object: 'filter' } %>
      </div>
    </div>

    <div class="col-md-4 form-group">
      <%= label :user_id, 'Creator', class: 'col-md-2 control-label' %>
      <div class="col-md-10">
        <%= select_tag 'user_id', options_for_select([['---', nil]] + User.current.with_design.order('last_name, first_name').collect{|u| [u.reverse_name, u.id]}, params[:user_id]), data: { object: 'filter' }, class: 'form-control' %>
      </div>
    </div>

    <div class="col-md-4 form-group">
      <%= submit_tag 'Search', class: 'btn btn-primary', name: nil %>
      <%= link_to 'Reset', project_designs_path(@project), class: 'btn btn-default' %>
    </div>
  </div>
<% end %>

<div id="designs">
  <%= render partial: 'designs/designs' %>
</div>
