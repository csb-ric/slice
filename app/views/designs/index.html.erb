<% @title = 'Designs' %>
<div class="page-header">
  <h1>
    <%= link_to @project.name, @project %> &middot; <%= @title %>
    <%= link_to "Create Design", new_project_design_path(@project), class: 'btn btn-xs btn-primary' %>
    <%= link_to "Create Design from Import", import_project_designs_path(@project), class: 'btn btn-xs btn-primary' %>
  </h1>
</div>

<%= form_tag project_designs_path(@project), method: :get, remote: true, id: "designs_search", class: 'form-inline', data: { object: 'form-load' } do %>
  <%= hidden_field_tag :order %>
  <div class="row">
    <div class="col-lg-4 form-group">
      <%= label :search, 'Search', class: 'col-lg-2 control-label' %>
      <div class="col-lg-10">
        <%= text_field_tag 'search', params[:search], class: 'form-control', data: { object: 'filter' } %>
      </div>
    </div>

    <div class="col-lg-4 form-group">
      <%= label :user_id, 'Creator', class: 'col-lg-2 control-label' %>
      <div class="col-lg-10">
        <%= select_tag 'user_id', options_for_select([['---', nil]] + User.current.with_design.order('last_name, first_name').collect{|u| [u.reverse_name, u.id]}, params[:user_id]), data: { object: 'filter' }, class: 'form-control' %>
      </div>
    </div>

    <div class="col-lg-4 form-group">
      <%= submit_tag 'Search', class: 'btn btn-primary' %>
      <%= link_to 'Reset', '#', class: 'btn btn-default', data: { target: '#designs_search', object: 'reset-filters' } %>
    </div>
  </div>
<% end %>

<div id="designs"><div class="center"><%= image_tag "contour/ajax-loader.gif" %></div></div>
