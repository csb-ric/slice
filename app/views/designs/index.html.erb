<% @title = 'Designs' %>
<div class="page-header">
  <h1>
    <%= link_to @project.name, @project %> &middot; <%= @title %>
    <%= link_to "Create Design", interactive_project_designs_path(@project), class: 'btn btn-mini btn-primary' %>
    <%= link_to "Create Design from Import", import_project_designs_path(@project), class: 'btn btn-mini btn-primary' %>
  </h1>
</div>

<%= form_tag project_designs_path(@project), method: :get, remote: true, id: "designs_search", class: 'form-search', data: { object: 'form-load' } do %>
  <%= hidden_field_tag :order %>
  <div class="row">
    <div class="span4 control-group">
      <%= label :search, 'Search', class: 'control-label' %>
      <div class="controls">
        <%= text_field_tag 'search', params[:search], class: 'search-query', data: { object: 'filter' } %>
      </div>
    </div>

    <div class="span4 control-group">
      <%= label :user_id, 'Creator', class: 'control-label' %>
      <div class="controls">
        <%= select_tag 'user_id', options_for_select([['---', nil]] + User.current.with_design.order('last_name, first_name').collect{|u| [u.reverse_name, u.id]}, params[:user_id]), data: { object: 'filter' } %>
      </div>
    </div>
  </div>

  <div class="form-actions">
    <%= submit_tag 'Search', class: 'btn btn-primary' %>
    <%= link_to 'Reset', '#', class: 'btn', data: { target: '#designs_search', object: 'reset-filters' } %>
  </div>
<% end %>

<div id="designs"><div class="center"><%= image_tag "contour/ajax-loader.gif" %></div></div>
