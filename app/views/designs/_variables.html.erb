<% if @design.options.size == 0 %>
  <% @option = { variable_id: '' } %>
  <%= render partial: 'edit_variable' %>
<% else %>
  <% @design.options.each do |option| %>
    <% @option = option %>
    <% if @option[:variable_id].blank? %>
      <%= render partial: 'edit_section' %>
    <% else %>
      <%= render partial: 'edit_variable' %>
    <% end %>
  <% end %>
<% end %>
