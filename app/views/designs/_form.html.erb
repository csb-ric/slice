<div class="page-header">
  <h1><%= @title %></h1>
</div>

<%= form_for @design, html: { class: 'form-horizontal' } do |f| %>
  <% if @design.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@design.errors.count, "error") %> prohibited this design from being saved:</h2>

      <ul>
      <% @design.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="control-group">
    <%= f.label :name, nil, class: 'control-label' %>
    <div class="controls">
      <%= f.text_field :name %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :project_id, nil, class: 'control-label' %>
    <div class="controls">
      <%= f.select :project_id, [['---', nil]] + current_user.all_projects.current.collect{|p| [p.name, p.id]} %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :description, nil, class: 'control-label' %>
    <div class="controls">
      <%= f.text_area :description, rows: 7, style: 'width:95%' %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :email_template, nil, class: 'control-label' %>
    <div class="controls" rel="popover" data-content="
      <table class='table table-bordered'>
        <thead><tr><th>Code</th><th>Example Output</th></tr></thead>
        <tr><td>$(age)</td><td>28</td></tr>
        <tr><td>$(age).name</td><td>Age at Study</td></tr>
        <tr><td>#(subject)</td><td>1234</td></tr>
        <tr><td>#(subject).acrostic</td><td>REMU</td></tr>
      </table>
      " data-title="Reference Variables" data-placement='top'>
      <%= f.text_area :email_template, rows: 7, style: 'width:95%' %>

    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, class: 'btn btn-primary' %>
    <%= cancel %>
  </div>

  <div class="btn-toolbar">
    <%= link_to 'Add Another Variable', '#', id: 'add_more_variables_top', class: 'btn btn-mini' %>
    <%= link_to 'Add Section', '#', id: 'add_more_sections_top', class: 'btn btn-mini' %>
  </div>

  <div id="variables" data-object="sortable">
    <%= render partial: 'variables' %>
  </div>

  <div class="btn-toolbar">
    <%= link_to 'Add Another Variable', '#', id: 'add_more_variables', class: 'btn btn-mini' %>
    <%= link_to 'Add Section', '#', id: 'add_more_sections', class: 'btn btn-mini' %>
  </div>

  <div class="form-actions">
    <%= f.submit nil, class: 'btn btn-primary' %>
    <%= cancel %>
  </div>
<% end %>
