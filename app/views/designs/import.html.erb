<% @title = 'Design Import' %>
<div class="page-header">
  <h1>
    <%= link_to @project.name, @project %> &middot; <%= link_to 'Designs', project_designs_path %> &middot; Import
  </h1>
</div>

<% @file_uploaded = (@variables.size > 0 and not @design.csv_file_cache.blank? and @design.errors[:csv_file].blank?) %>

<%= params[:variables] if @file_uploaded %>

<%= form_for @design, url: create_import_project_designs_path(@project), method: :post, html: { class: 'form-horizontal', multipart: true } do |f| %>
  <% if @design.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@design.errors.count, "error") %> prohibited this design from being saved:</h2>

      <ul>
      <% @design.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="control-group">
    <%= f.label :csv_file, 'Data Import (CSV)', class: 'control-label' %>
    <div class="controls">
      <% if @file_uploaded %>
        <div style="padding-top:5px;">
          <b><%= @design.csv_file_cache.split('/').last %></b>
          <%= f.hidden_field :csv_file_cache %>
        </div>
      <% else %>
        <div style="padding-top:5px;">
          <%= f.file_field :csv_file, style: 'line-height: 0px;' %>
        </div>
      <% end %>
    </div>
  </div>

  <% if @file_uploaded %>
    <div class="control-group">
      <%= f.label :name, nil, class: 'control-label' %>
      <div class="controls">
        <%= f.text_field :name %>
      </div>
    </div>

    <% @variables.each do |hash| %>
      <div class="control-group">
        <label class="control-label"><%= hash[:name] %></label>
        <div class="controls">
          <% if variable = @project.variables.find_by_name(hash[:name]) %>
            <div style="padding-top:5px;">
              <%= link_to variable.display_name, [variable.project, variable], target: '_blank' %> of type <b><%= variable.variable_type %></b> won't be recreated.
              <%= hidden_field_tag "variables[#{hash[:name]}][display_name]", hash[:display_name] %>
            </div>
          <% else %>
            <%= text_field_tag "variables[#{hash[:name]}][display_name]", hash[:display_name] %>
            <%= select_tag "variables[#{hash[:name]}][variable_type]", options_for_select(Variable::TYPE, hash[:variable_type]) %>
          <% end %>
        </div>
      </div>
    <% end %>

  <% end %>

  <div class="form-actions">
    <%= f.submit @variables.size > 0 ? "Import Data" : "Proceed to Import Specification", class: 'btn btn-primary' %>
    <% if @file_uploaded %>
      <%= link_to 'Previous Step', import_project_designs_path, class: 'btn' %>
    <% else %>
      <%= link_to 'Cancel', project_designs_path, class: 'btn' %>
    <% end %>
  </div>
<% end %>
