- @title = 'Posts'
.page-header
  %h1
    = link_to @project.name, about_project_path(@project)
    &middot;
    = @title
    = link_to "Create Post", new_project_post_path(@project), class: 'btn btn-xs btn-primary'

= form_tag project_posts_path(@project), method: :get, class: 'form-inline' do
  = hidden_field_tag :order, params[:order]
  = text_field_tag 'search', params[:search], class: 'form-control'
  = submit_tag 'Search', class: 'btn btn-primary', name: nil

= render 'posts/posts'
