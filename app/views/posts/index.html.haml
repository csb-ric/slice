- @title = 'News'

= render 'projects/tabbed_menu', links: [['News', project_posts_path(@project)]]

.mini-menu-outer
  .mini-menu-left-fixed
    = render 'projects/menu_mini'
  .mini-menu-right-fluid
    %h2.underline-header
      = @title
      = link_to 'Create Post', new_project_post_path(@project), class: 'btn btn-xs btn-primary'
      .per-page
        = render 'contour/layouts/per_page', per_page: 20, object_count: @posts.total_count

    = render 'posts/posts'

    .jumbotron
      = form_tag project_posts_path(@project), method: :get, class: 'form-inline' do
        = hidden_field_tag :order, params[:order]
        = text_field_tag 'search', params[:search], class: 'form-control'
        = submit_tag 'Search', class: 'btn btn-primary', name: nil
