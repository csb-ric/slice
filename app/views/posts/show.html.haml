- @title = @post.name
.page-header
  %h1
    = link_to @project.name, about_project_path(@project)
    &middot;
    = link_to 'Posts', project_posts_path(@project)
    &middot;
    = @title
  = link_to "Edit Post", edit_project_post_path(@post.project, @post), class: 'btn btn-default btn-xs'
  = link_to "Delete Post", [@post.project, @post], method: :delete, class: 'btn btn-xs btn-danger-inverse', data: { confirm: "Are you sure you want to delete Post #{@post.name}?" }

%dl.dl-horizontal
  %dt Name
  %dd= @post.name

  %dt Description
  %dd= simple_markdown @post.description

  %dt Archived
  %dd= simple_check @post.archived
