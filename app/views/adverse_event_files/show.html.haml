- @title = "#{@adverse_event.name} Files"
- @menu_title = "#{@project.name} #{@title}"
- @breadcrumbs = []
- @breadcrumbs << [@adverse_event.subject.subject_code, [@project, @adverse_event.subject]] if @adverse_event.subject

= @subject = @adverse_event.subject; render 'subjects/side_nav'

- content_for :header do
  .background-gradient
  .header-container
    .container
      %h1.page-heading
        .pull-right
          = render 'adverse_events/actions', adverse_event: @adverse_event
        = render 'layouts/side_nav_header_button'
        = link_to @adverse_event.name, [@project, @adverse_event]
        Files
      = render 'adverse_events/shareable_link', adverse_event: @adverse_event

.dashboard-container
  = render 'adverse_events/menu'

  = succeed ' ' do
    = link_to download_project_adverse_event_adverse_event_file_path(@project, @adverse_event, @adverse_event_file), data: { turbolinks: false }, class: 'btn btn-default' do
      .glyphicon.glyphicon-download
      = @adverse_event_file.name
  %code= number_to_human_size @adverse_event_file.attachment.size

- if @adverse_event_file.image?
  .center= image_tag download_project_adverse_event_adverse_event_file_path(@project, @adverse_event, @adverse_event_file), class: 'img-responsive img-thumbnail shadow'
