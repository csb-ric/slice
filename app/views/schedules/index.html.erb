<% @title = 'Schedules' %>
<div class="page-header">
  <h1>
    <%= link_to @project.name, @project %> &middot; <%= @title %>
    <%= link_to "Create Schedule", new_project_schedule_path(@project), class: 'btn btn-xs btn-primary' %>
    <%= link_to 'Events', project_events_path(@project), class: 'btn btn-default btn-xs' %>
  </h1>
</div>

<%= form_tag project_schedules_path(@project), method: :get, remote: true, id: "schedules_search", class: 'form-inline', data: { object: 'form-load', no_turbolink: true } do %>
  <%= hidden_field_tag :order %>
  <%= text_field_tag 'search', params[:search], class: 'form-control' %>
  <%= submit_tag 'Search', class: 'btn btn-primary' %>
<% end %>

<div id="schedules"><div class="center"><%= image_tag "contour/ajax-loader.gif" %></div></div>
