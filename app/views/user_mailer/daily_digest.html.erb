Hello <%= @recipient.first_name %>,<br />

<% if @recipient.digest_sheets_created.size > 0 %>
  <br />
  <br />

  <table style="border:0px;border-collapse:collapse;margin:0px;padding:0px;">
    <thead>
      <tr style="text-align:left">
        <th colspan="4" style="padding-bottom:10px"><span style="border:1px solid #00ba25;background-color:#a6ffb8;">ADDED</span> Recently</th>
      </tr>
    </thead>

    <% @recipient.digest_sheets_created.group_by{|s| s.project_id}.each do |project_id, project_sheets| %>
      <tr><td colspan="5" style="border-top:1px solid #ddd;"></td></tr>
      <tr>
        <td colspan="5" style="text-align:left;padding-top:10px;padding-right:20px;padding-bottom:10px;font-weight:bold;font-size:1.2em">
          <% project = Project.find_by_id(project_id) %>
          <%= project ? link_to(project.name, "#{SITE_URL}/projects/#{project.id}") : 'No Project' %>
        </td>
      </tr>
      <% if project_sheets.size > 15 %>
        <tr><td colspan="5" style="padding-left:20px;"><%= link_to pluralize(project_sheets.count, 'sheet'), "#{SITE_URL}/projects/#{project.id}/sheets" %> for <%= pluralize project_sheets.collect{|ps| ps.subject_id}.uniq.count, 'unique subject' %> recently entered</td></tr>
      <% else  %>
        <% project_sheets.group_by{|s| s.subject_id}.each do |subject_id, subject_sheets| %>
          <% subject = Subject.find_by_id(subject_id) %>
          <tr style="<%= 'background-color:#ffffd4' if subject and subject.new_digest_subject?(subject_sheets.collect{|s| s.id}) %>">
            <td colspan="2" style="padding-left:10px;text-align:left;padding-top:10px;padding-right:20px;padding-bottom:10px;font-weight:bold"><%= subject ? link_to(subject.name, "#{SITE_URL}/projects/#{subject.site.project_id}/subjects/#{subject.id}") : 'No Subject' %></td>
            <td colspan="3" style="text-align:right;padding-right:10px;"><b><%= 'New Subject' if subject and subject.new_digest_subject?(subject_sheets.collect{|s| s.id}) %></b></td>
          </tr>
          <% subject_sheets.each do |sheet| %>
            <tr style="<%= 'background-color:#ffffd4' if subject and subject.new_digest_subject?(subject_sheets.collect{|s| s.id}) %>"><td style="padding-left:10px;"></td><%= @sheet = sheet; render partial: 'digest_sheet' %></tr>
          <% end %>
          <tr style="<%= 'background-color:#ffffd4' if subject and subject.new_digest_subject?(subject_sheets.collect{|s| s.id}) %>"><td colspan="5" style="padding-left:10px;padding-bottom:10px;padding-right:10px;"></td></tr>
        <% end %>
      <% end %>
      <tr><td colspan="5" style="padding-bottom:10px"></td></tr>
    <% end %>
  </table>
  <br />
<% end %>

<% if @recipient.digest_comments.size > 0 %>
  <br />
  <br />
    <table>
    <thead>
      <tr style="text-align:left">
        <th colspan="3"><span style="border:1px solid #ff9900;background-color:#ffe0b2">COMMENTS</span></th>
      </tr>
    </thead>
    <% @recipient.digest_comments.group_by{|s| s.project_id}.each do |project_id, comments| %>
      <tr><td colspan="3" style="border-top:1px solid #ddd;"></td></tr>
      <tr><td colspan="3" style="text-align:left;padding-top:10px;padding-right:20px;padding-bottom:10px;font-weight:bold"><%= ((project = Project.find_by_id(project_id)) ? link_to(project.name, "#{SITE_URL}/projects/#{project.id}") : 'No Project') %></td></tr>
      <% comments.group_by{|s| s.sheet_id}.each do |sheet_id, comments| %>
        <% sheet = Sheet.find_by_id(sheet_id) %>
        <tr>
          <td colspan="2" style="text-align:left;padding-top:10px;padding-right:20px;padding-bottom:10px;font-weight:bold">
            <%= link_to sheet.subject.name, "#{SITE_URL}/projects/#{sheet.project.id}/subjects/#{sheet.subject.id}" %> -
            <%= sheet ? link_to(sheet.name, "#{SITE_URL}/projects/#{sheet.project.id}/sheets/#{sheet.id}") : 'No Sheet' %>
          </td>
          <td style="text-align:right"><%= render partial: 'digest_sheet_percent', locals: { sheet: sheet } %></td>
        </tr>
        <% comments.each do |comment| %>
          <tr><%= @comment = comment; render partial: 'digest_comment' %></tr>
        <% end %>
        <tr><td colspan="3" style="padding-bottom:10px"></td></tr>
      <% end %>
      <tr><td colspan="3" style="padding-bottom:10px"></td></tr>
    <% end %>
  </table>
  <br />
<% end %>

<%= @footer_html %>
