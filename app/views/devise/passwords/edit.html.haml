- @title = 'Change your password'

- @no_footer = true

.background-gradient

%p.lead.center.text-white.text-shadow
  Change your password

.sign-up-form
  .sign-up-form-title
    Change Password

  = form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, class: 'form-vertical' }) do |f|
    = f.hidden_field :reset_password_token

    .form-group
      = render 'layouts/label_or_errors', f: f, object: resource, key: :password, key_name: 'New Password'
      = f.password_field :password, class: 'form-control'

    .form-group
      = render 'layouts/label_or_errors', f: f, object: resource, key: :password_confirmation, key_name: 'Password Confirmation'
      = f.password_field :password_confirmation, class: 'form-control'

    .form-group.submit-btn-container
      = f.submit 'Change my password', class: 'btn btn-primary btn-block btn-shadow'

= render 'layouts/simple_footer'
