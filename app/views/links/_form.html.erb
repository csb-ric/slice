<div class="page-header">
  <h1><%= link_to @link.project.name, @link.project %> &middot; <%= @title %></h1>
</div>

<%= form_for [@link.project, @link], html: { class: 'form-horizontal' } do |f| %>
  <% if @link.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@link.errors.count, "error") %> prohibited this link from being saved:</h2>

      <ul>
      <% @link.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name, nil, class: 'col-lg-2 control-label' %>
    <div class="col-lg-10">
      <%= f.text_field :name %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :category, nil, class: 'col-lg-2 control-label' %>
    <div class="controls sheet-container">
      <%= f.text_field :category, autocomplete: "off", data: { provide: "typeahead", source: @link.project.links.pluck(:category).uniq.to_json } %>
      <% unless @link.new_record? %>
        <label class="checkbox inline <%= 'selected' if params[:rename_category] == '1' %>"><%= check_box_tag :rename_category, '1', params[:rename_category] == '1' %> Rename Category - select if you want rename this category for all links using it.</label>
      <% end %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :url, 'URL', class: 'col-lg-2 control-label' %>
    <div class="col-lg-10">
      <%= f.text_field :url %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :archived, nil, class: 'col-lg-2 control-label' %>
    <div class="col-lg-10">
      <%= f.check_box :archived %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, class: 'btn btn-primary' %>
    <%= cancel %>
  </div>
<% end %>
