- @title = 'JSON Design[s] Import'
.page-header
  %h1
    = link_to @project.name, setup_project_path(@project)
    &middot;
    = @title

= form_tag imports_json_project_designs_path(@project), method: :post, class: 'form-horizontal', multipart: true do
  - if @error
    .bs-callout.bs-callout-danger
      %h4
        1 error prohibited this file from being imported

      %ul
        %li= @error

  .form-group
    = label_tag :json_file, 'Design[s] Import (JSON)', class: 'col-md-2 control-label'
    .col-md-10
      = file_field_tag :json_file, class: 'form-control'

  .form-group
    .col-md-10.col-md-offset-2
      = submit_tag 'Import Design[s]', class: 'btn btn-primary'
      = link_to 'Cancel', project_designs_path(@project), class: 'btn btn-default'
