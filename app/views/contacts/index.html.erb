<% @title = 'Contacts' %>
<div class="page-header">
  <h1>
    <%= link_to @project.name, about_project_path(@project) %> &middot; <%= @title %>
    <%= link_to "Create Contact", new_project_contact_path(@project), class: 'btn btn-xs btn-primary' %>
  </h1>
</div>

<%= form_tag project_contacts_path(@project), method: :get, remote: true, id: "contacts_search", class: 'form-inline', data: { object: 'form-load' } do %>
  <%= hidden_field_tag :order %>
  <%= text_field_tag 'search', params[:search], class: 'form-control' %>
  <%= submit_tag 'Search', class: 'btn btn-primary' %>
<% end %>

<div id="contacts"><div class="center"><%= image_tag "contour/ajax-loader.gif" %></div></div>
