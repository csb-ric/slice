- @title = @contact.name
.page-header
  %h1
    = link_to @project.name, about_project_path(@project)
    &middot;
    = link_to 'Contacts', project_contacts_path(@project)
    &middot;
    = @title
  = link_to "Edit Contact", edit_project_contact_path(@contact.project, @contact), class: 'btn btn-default btn-xs'
  = link_to "Delete Contact", [@contact.project, @contact], method: :delete, class: 'btn btn-xs btn-danger-inverse', data: { confirm: "Are you sure you want to delete Contact #{@contact.name}?" }

%dl.dl-horizontal
  %dt Title
  %dd= @contact.title

  %dt Name
  %dd= @contact.name

  %dt Phone
  %dd= @contact.phone

  %dt Fax
  %dd= @contact.fax

  %dt Email
  %dd= @contact.email

  %dt Position
  %dd= @contact.position

  %dt Project
  %dd= link_to @contact.project.name, @contact.project if @contact.project

  %dt Archived
  %dd= simple_check @contact.archived
