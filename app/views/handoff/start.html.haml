- percent = [1 * 100 / (@handoff.handoff_enabled_event_designs.count + 2), 100].min
.progress.progress-striped
  .progress-bar{ class: "progress-bar-primary", style: "width: #{percent}%;" }
    Getting Started

- if @handoff.first_design
  %h2 Survey Forms
  .jumbotron
    %p
      Dear Participant,
    %p
      You will be presented with a series of forms across the next couple of pages.
    %p
      Please complete each form carefully and accurately.
    %p
      If you have any questions,
      you may ask for further clarification from our staff.

  - if @handoff.first_design == @handoff.resume_design
    = link_to handoff_design_path(@project, @handoff, @handoff.first_design), class: 'btn btn-lg btn-block btn-success' do
      Get Started
      %span.glyphicon.glyphicon-arrow-right
  - elsif @handoff.resume_design
    .row
      .col-sm-6{ style: 'margin-bottom: 20px' }
        = link_to handoff_design_path(@project, @handoff, @handoff.first_design), class: 'btn btn-lg btn-block btn-default' do
          Review All Forms
          %span.glyphicon.glyphicon-eye
      .col-sm-6
        = link_to handoff_design_path(@project, @handoff, @handoff.resume_design), class: 'btn btn-lg btn-block btn-success' do
          Resume Where I Left Off
          %span.glyphicon.glyphicon-arrow-right
  - else
    = link_to handoff_design_path(@project, @handoff, @handoff.first_design), class: 'btn btn-lg btn-block btn-default' do
      Review All Forms
      %span.glyphicon.glyphicon-eye
- else
  %h2 Tablet Handoff

  = render 'handoffs/no_handoff_enabled_designs_on_event'
