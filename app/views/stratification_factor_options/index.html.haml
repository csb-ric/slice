- @title = "Options"
- @menu_title = "#{@project.name} #{@title}"

- content_for :sidebar, render("projects/sidebar")
- content_for :header do
  .float-right
    = link_to plus_or("New Option"), new_project_randomization_scheme_stratification_factor_stratification_factor_option_path(@project, @randomization_scheme, @stratification_factor), class: "btn btn-accent btn-shadow"
    .per-page= render "layouts/per_page", per_page: 40, object_count: @stratification_factor_options.total_count
  = @title
- content_for :breadcrumbs do
  %ol
    %li= link_to "randomization schemes", project_randomization_schemes_path(@project)
    %li= link_to @randomization_scheme.name.downcase, [@project, @randomization_scheme]
    %li= link_to "stratification factors", project_randomization_scheme_stratification_factors_path(@project, @randomization_scheme)
    %li= link_to @stratification_factor.name.downcase, [@project, @randomization_scheme, @stratification_factor]
    %li.breadcrumb-muted options

= render "stratification_factor_options/stratification_factor_options"
