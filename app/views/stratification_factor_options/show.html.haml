- @title = @stratification_factor_option.name
.page-header
  %h1
    = link_to @project.name, setup_project_path(@project)
    &middot;
    = link_to @randomization_scheme.name, [@project, @randomization_scheme]
    &middot;
    = link_to @stratification_factor.name, [@project, @randomization_scheme, @stratification_factor]
    &middot;
    = link_to "Options", project_randomization_scheme_stratification_factor_stratification_factor_options_path(@project, @randomization_scheme, @stratification_factor)
    &middot;
    = @title
  = link_to "Edit Stratification Factor Option", edit_project_randomization_scheme_stratification_factor_stratification_factor_option_path(@project, @randomization_scheme, @stratification_factor, @stratification_factor_option), class: 'btn btn-default btn-xs'
  - if @randomization_scheme.published?
    = link_to 'Randomization Scheme Published', '#', data: { object: 'suppress-click' }, class: 'btn btn-xs btn-primary', disabled: true
  - else
    = link_to "Delete Stratification Factor Option", [@project, @randomization_scheme, @stratification_factor, @stratification_factor_option], method: :delete, class: 'btn btn-xs btn-danger-inverse', data: { confirm: "Are you sure you want to delete Stratification Factor Option #{@stratification_factor_option.name}?" }

%dl.dl-horizontal

  %dt Creator
  %dd= link_to @stratification_factor_option.user.name, @stratification_factor_option.user if @stratification_factor_option.user

  %dt Label
  %dd= @stratification_factor_option.label

  %dt Value
  %dd= @stratification_factor_option.value
