<div class="page-header">
  <h1><%= link_to @document.project.name, @document.project %> &middot; <%= @title %></h1>
</div>

<%= form_for [@document.project, @document], html: { class: 'form-horizontal' } do |f| %>
  <% if @document.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@document.errors.count, "error") %> prohibited this document from being saved:</h2>

      <ul>
      <% @document.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name, nil, class: 'col-lg-2 control-label' %>
    <div class="col-lg-10">
      <%= f.text_field :name %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :category, nil, class: 'col-lg-2 control-label' %>
    <div class="controls sheet-container">
      <%= f.text_field :category, autocomplete: "off", data: { provide: "typeahead", source: @document.project.documents.pluck(:category).uniq.to_json } %>
      <% unless @document.new_record? %>
        <label class="checkbox inline <%= 'selected' if params[:rename_category] == '1' %>"><%= check_box_tag :rename_category, '1', params[:rename_category] == '1' %> Rename Category - select if you want rename this category for all documents using it.</label>
      <% end %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :file, nil, class: 'col-lg-2 control-label' %>
    <div class="controls sheet-container">
      <%= f.file_field :file %>
      <%= f.hidden_field :file_cache %>
      <% if @document.file? and @document.file.file %><label class="radio inline selected" style="padding-left: 10px;" id="existing-file"><%= @document.file.file.filename %> - <%= number_to_human_size(@document.file.size) %></label><% end %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :archived, nil, class: 'col-lg-2 control-label' %>
    <div class="col-lg-10">
      <%= f.check_box :archived %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, class: 'btn btn-primary' %>
    <%= cancel %>
  </div>
<% end %>
