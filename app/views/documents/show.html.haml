- @title = @document.name
.page-header
  %h1
    = link_to @project.name, about_project_path(@project)
    &middot;
    = link_to 'Documents', project_documents_path(@project)
    &middot;
    = @title
  = link_to "Edit Document", edit_project_document_path(@document.project, @document), class: 'btn btn-default btn-xs'
  = link_to "Delete Document", [@document.project, @document], method: :delete, class: 'btn btn-xs btn-danger-inverse', data: { confirm: "Are you sure you want to delete Document #{@document.name}?" }

%dl.dl-horizontal
  %dt Name
  %dd= @document.name

  %dt Category
  %dd= @document.category

  %dt File
  %dd
    - if @document.file.size > 0
      - full_url = file_project_document_path(@project, @document)
      = link_to @document.name, full_url, target: '_blank', class: 'btn btn-default btn-xs'
      %span.text-muted= number_to_human_size @document.file.size

  %dt Archived
  %dd= simple_check @document.archived
