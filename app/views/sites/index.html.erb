<% @title = 'Sites' %>
<div class="page-header">
  <h1>
    <%= link_to @project.name, @project %> &middot; <%= @title %>
    <%= link_to "Create Site", new_project_site_path(@project), class: 'btn btn-mini btn-primary' if current_user.all_viewable_projects.pluck(:id).include?(@project.id) %>
  </h1>
</div>

<%= form_tag project_sites_path(@project), method: :get, remote: true, id: "sites_search", class: 'form-inline', data: { object: 'form-load' } do %>
  <%= hidden_field_tag :order %>

  <%= text_field_tag 'search', params[:search], class: 'form-control', data: { object: 'filter' }  %>
  <%= submit_tag 'Search', class: 'btn btn-primary' %>
  <%= link_to 'Reset', '#', class: 'btn btn-cancel', data: { target: '#sites_search', object: 'reset-filters' } %>

<% end %>

<div id="sites"><div class="center"><%= image_tag "contour/ajax-loader.gif" %></div></div>
