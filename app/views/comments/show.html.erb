<% @title = @comment.name %>
<div class="page-header">
  <h1>
    <%= link_to "Comments", comments_path %> &middot; <%= @title %>
  </h1>
  <% if current_user.all_comments.pluck(:id).include?(@comment.id) %>
    <%= link_to "Edit Comment", edit_comment_path(@comment), class: 'btn btn-default btn-xs' %>
    <%= link_to "Delete Comment", @comment, method: :delete, class: 'btn btn-xs btn-danger-inverse', data: { confirm: "Are you sure you want to delete Comment #{@comment.name}?" } %>
  <% end %>
</div>

<dl class="dl-horizontal">

  <dt>Description</dt>
  <dd><%= simple_markdown @comment.description %></dd>

  <dt>User</dt>
  <dd><%= link_to @comment.user.name, @comment.user %></dd>

  <dt>Sheet</dt>
  <dd><%= link_to @comment.sheet.name, [@comment.sheet.project, @comment.sheet] %></dd>

</dl>
