- @title = 'Domains'

= render 'projects/tabbed_menu', links: [['Domains', project_domains_path(@project)]]

.mini-menu-outer
  .mini-menu-left-fixed
    = render 'projects/menu_mini'
  .mini-menu-right-fluid
    %h2.underline-header
      = @title
      = link_to 'Create Domain', new_project_domain_path(@project), class: 'btn btn-xs btn-primary'
      .per-page
        = render 'layouts/per_page', per_page: 20, object_count: @domains.total_count

    = render 'domains/domains'

    .jumbotron
      = form_tag project_domains_path(@project), method: :get, class: 'form-inline' do
        = hidden_field_tag :order, params[:order]
        = text_field_tag 'search', params[:search], class: 'form-control'
        = submit_tag 'Search', class: 'btn btn-primary', name: nil
        = link_to 'Reset', project_domains_path(@project), class: 'btn btn-default'
