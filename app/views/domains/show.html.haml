- @title = @domain.name
- @menu_title = "#{@project.name} #{@title}"

= render 'projects/side_nav'

- content_for :header do
  .background-gradient
  .header-container
    .container
      %h1.page-heading
        .pull-right
          .dropdown
            = link_to '#', class: 'btn btn-default dropdown-toggle', data: { toggle: 'dropdown' } do
              Actions
              %strong.caret

            %ul.dropdown-menu.dropdown-menu-right
              %li
                = link_to edit_project_domain_path(@domain.project, @domain) do
                  %span.glyphicon.glyphicon-edit
                  Edit
              %li.divider{ role: 'separator' }
              %li
                = link_to [@project, @domain], method: :delete, data: { confirm: "Are you sure you want to delete Domain #{@domain.name}?" } do
                  .text-danger
                    %span.glyphicon.glyphicon-trash
                    Delete

        = render 'layouts/side_nav_header_button'
        = @title

.dashboard-container
  %table.table.table-borderless
    %col.hidden-xs{ width: '30%' }
    %col.hidden-sm.hidden-md.hidden-lg{ width: '50%' }
    %tr
      %th Description
      %td= simple_format @domain.description
    %tr
      %th Creator
      %td= link_to @domain.user.name, @domain.user if @domain.user
    %tr
      %th Variables
      %td
        %ul
          - @domain.variables.order('name').each do |variable|
            %li
              = link_to variable.name, [variable.project, variable]
              \-
              %span.text-muted= variable.display_name

  - if @domain.options.size > 0
    = render 'compact_options', domain: @domain
