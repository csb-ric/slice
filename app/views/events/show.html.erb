<% @title = @event.name %>
<div class="page-header">
  <h1>
    <%= link_to @project.name, setup_project_path(@project) %> &middot; <%= link_to 'Events', project_events_path(@project) %> &middot; <%= @title %>
  </h1>
  <%= link_to "Edit Event", edit_project_event_path(@event.project, @event), class: 'btn btn-default btn-xs' %>
  <%= link_to "Delete Event", [@event.project, @event], method: :delete, class: 'btn btn-xs btn-danger-inverse', data: { confirm: "Are you sure you want to delete Event #{@event.name}?" } %>
</div>

<dl class="dl-horizontal">

  <dt>Description</dt>
  <dd><%= simple_format @event.description %></dd>

  <dt>User</dt>
  <dd><%= link_to @event.user.name, @event.user if @event.user %></dd>

</dl>
