%td.text-center= event.position
%td
  = link_to event.name, [@project, event]
  = render "layouts/unblinded_only", project: @project, object: event, placement: "right"
%td.d-none.d-sm-table-cell
  - assigned_count = event.subject_events.with_current_subjects.count
  = pluralize assigned_count, "event"
%td.d-none.d-sm-table-cell.text-center= simple_check event.archived
%td.d-none.d-md-table-cell.text-center= event.designs.count
%td.text-center
  .dropdown
    = link_to "#", class: "btn btn-default btn-xs dropdown-toggle", data: { toggle: "dropdown" } do
      Actions
      %strong.caret

    %ul.dropdown-menu.dropdown-menu-right
      %li
        = link_to edit_project_event_path(@project, event) do
          %i.fa.fa-pencil
          Edit
      %li
        = link_to project_event_path(@project, event, event: { archived: event.archived? ? "0" : "1" }), method: :patch, remote: true do
          %i.fa.fa-archive
          - if event.archived?
            Restore
          - else
            Archive
      %li.divider{ role: "separator" }
      %li
        = link_to [@project, event], method: :delete, remote: true, data: { confirm: "Delete \"#{event.name}\" event?" } do
          .text-danger
            %i.fa.fa-trash
            Delete
