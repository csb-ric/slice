- show_unblinded_only = (@project.blinding_enabled? && @project.unblinded?(current_user))
%td.center= event.position
%td= link_to event.name, [@project, event]
%td.hidden-xs
  - assigned_count = event.subject_events.with_current_subjects.count
  = pluralize assigned_count, 'event'
- if show_unblinded_only
  %td.hidden-xs.center
    - if event.only_unblinded?
      %span.glyphicon.glyphicon-eye-open.text-muted
%td.hidden-xs.center= simple_check event.archived
%td.hidden-xs.hidden-sm.center= event.designs.count
%td
  .dropdown
    = link_to '#', class: 'btn btn-default btn-xs dropdown-toggle', data: { toggle: 'dropdown' } do
      Actions
      %strong.caret

    %ul.dropdown-menu.dropdown-menu-right
      %li
        = link_to edit_project_event_path(@project, event) do
          %span.glyphicon.glyphicon-edit
          Edit
      %li
        = link_to project_event_path(@project, event, event: { archived: event.archived? ? '0' : '1' }), method: :patch, remote: true do
          %span.glyphicon.glyphicon-briefcase
          - if event.archived?
            Restore
          - else
            Archive
      %li.divider{ role: 'separator' }
      %li
        = link_to [@project, event], method: :delete, remote: true, data: { confirm: "Delete #{event.name}?" } do
          .text-danger
            %span.glyphicon.glyphicon-trash
            Delete
