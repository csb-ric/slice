- @title = "#{@event.name_was} Edit"
- @menu_title = "#{@project.name} #{@title}"

- content_for :sidebar, render("projects/sidebar")
- content_for :header, @event.name_was
- content_for :breadcrumbs do
  %ol
    %li= link_to "events", project_events_path(@project)
    %li= link_to (@event.slug_was.presence || @event.name_was).downcase, [@project, @event]
    %li.breadcrumb-muted edit

.dashboard-container= render "form", event: @event
