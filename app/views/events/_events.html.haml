%table.table.table-striped
  %thead
    %tr
      = th_sort_field @order, 'events.position', 'Position'
      = th_sort_field @order, 'events.name', 'Name'
      = th_sort_field @order, 'events.scheduled', 'Scheduled'
      = th_sort_field @order, 'events.archived', 'Archived'
      %th Designs
      %th Actions

  - @events.each do |event|
    %tr
      %td= event.position
      %td= link_to event.name, [@project, event]
      %td= simple_check event.scheduled
      %td= simple_check event.archived
      %td= event.designs.count
      %td
        = link_to 'Edit', edit_project_event_path(@project, event), class: 'btn btn-xs btn-default'
        = link_to 'Delete', [@project, event], method: :delete, class: 'btn btn-xs btn-danger-inverse', data: { confirm: "Are you sure you want to delete Event #{event.name}?" }

.center
  = paginate @events, theme: 'contour'
