- additional_class = if validate_response == "error"
  - "callout-danger"
- elsif validate_response == "warning"
  - "callout-warning"
- else
  - ""
.callout.py-0{ id: "#{target_name}_alert_box", style: "#{"display: none;" unless variable.validator.show_full_message?(value)}", class: "#{additional_class}" }
  %strong{ id: "#{target_name}_formatted_value" }= variable.validator.formatted_value(value)
  %span{ id: "#{target_name}_message" }= variable.validator.message(value)
