- if info_request.resolved?
  .ml-3
    %strong{ style: "font-size: 80%;" }
      = info_request.resolver.full_name
      %small= info_request.resolved_at.strftime("%-d %b %Y, %-l:%M %p")
    %div
      = icon("fas", "check-square")
      Marked as resolved.
- elsif project.ae_reporter?(current_user) && info_request.ae_review_team.blank?
  .ml-3
    %strong.text-muted{ style: "font-size: 80%;" }
      = current_user.full_name
    %div
      = icon("far", "square")
      = link_to ae_module_reporters_resolve_info_request_path(project, adverse_event, info_request), method: :post do
        Mark as resolved
        = icon("fas", "caret-right")
- elsif project.ae_admin?(current_user) && info_request.ae_review_team.present?
  .ml-3
    %strong.text-muted{ style: "font-size: 80%;" }
      = current_user.full_name
    %div
      = icon("far", "square")
      = link_to ae_module_admins_resolve_info_request_path(project, adverse_event, info_request), method: :post do
        Mark as resolved
        = icon("fas", "caret-right")
