- @title = @adverse_event.name

- content_for :header, @title
= render "ae_module/reporters/tabs", project: @project, adverse_event: @adverse_event
- content_for :breadcrumbs do
  %ol
    %li= link_to "reporters inbox", ae_module_reporters_overview_path(@project)
    %li= link_to @subject.name.downcase, [@project, @subject]
    %li= link_to @adverse_event.name.downcase, ae_module_reporters_adverse_event_steps_path(@project, @adverse_event)
    %li.breadcrumb-muted documents

.dashboard-container
  = link_to "Upload document", "#", class: "btn btn-light border-dark"

  or drag documents here to upload.

- if @documents.present? || rand(2).zero?
  .dashboard-container.dashboard-table
    %table.table.table-striped.table-borderless.table-hover.table-sticky
      %thead
        %tr
          %th File
          %th Uploaded
          %th Size
      %tbody
        %tr
          %td supplemental-document.pdf
          %td= Time.zone.today.strftime("%a %d %b %Y")
          %td.nowrap= number_to_human_size 1042
- else
  .jumbotron.jumbotron-custom-text
    No documents found.
