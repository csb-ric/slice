- @title = "AeModule::Managers#inbox"

- content_for :header, @title

- content_for :breadcrumbs do
  %ol
    %li
      = link_to ae_module_dashboard_path(@project) do
        = icon("fas", "caret-left")
        ae dashboard
    %li.breadcrumb-muted managers inbox

- if @adverse_event_review_teams.present?
  .dashboard-container.dashboard-table
    %table.table.table-striped.table-borderless.table-hover.table-sticky
      %col{ width: "2px" }
      %col{ width: "1px" }
      %col.d-none.d-sm-table-column
      %col
      %col
      %col
      %col{ width: "1px" }
      %thead
        %tr
          %th.p-0
          %th.text-center #
          %th.d-none.d-sm-table-cell Description
          %th Reported
          %th.text-center (reserved)
          %th Team
          %th Status
      %tbody
        - @adverse_event_review_teams.each do |adverse_event_review_team|
          - adverse_event = adverse_event_review_team.ae_adverse_event
          - team = adverse_event_review_team.ae_review_team
          %tr
            %td.p-0.bg-primary
            %td.text-center= link_to adverse_event.name, ae_module_managers_adverse_event_path(@project, team, adverse_event)
            %td.d-none.d-sm-table-cell{ style: "max-width: 200px;" }
              .overflow-hidden.nowrap= link_to adverse_event.description.truncate(40), ae_module_managers_adverse_event_path(@project, team, adverse_event)
            %td= adverse_event.created_at.strftime("%a, %b %-d, %Y")
            %td.text-center= icon("far", "square")
            %td
              - if adverse_event.ae_adverse_event_review_teams.present?
                = adverse_event.ae_adverse_event_review_teams.includes(:ae_review_team).pluck(:name).to_sentence
              - else
                %span.text-muted Not assigned.
            %td
              %span.badge.badge-primary New
- else
  .jumbotron.jumbotron-custom-text
    No adverse events found.


.border.p-3
  .mb-3
    %strong Example
  .dashboard-container.dashboard-table.mb-0
    %table.table.table-striped.table-borderless.table-hover.table-sticky
      %col{ width: "1px" }
      %col{ width: "1px" }
      %col
      %col
      %col
      %col{ width: "1px" }
      %thead
        %tr
          %th
          %th.text-center AE
          %th Sent to team date
          %th Description
          %th
          %th Team
          %th Status
      %tbody
        %tr
          %td
          %td.text-center AE#5
          %td= Time.zone.now.strftime("%a, %b %-d, %Y")
          %td= link_to "Hospitalization", "#", data: { object: "suppress-click" }
          %td
          %td.nowrap Clinical Event Committee
          %td
            %span.badge.badge-success New

        %tr
          %td
          %td.text-center AE#4
          %td= (Time.zone.now - 2.weeks).strftime("%a, %b %-d, %Y")
          %td= link_to "Heart failure", "#", class: "text-danger", style: "text-decoration: line-through;", data: { object: "suppress-click" } # ae_module_reviewers_face_sheet_path(@project)
          %td
          %td.nowrap Clinical Event Committee
          %td.text-muted
            = icon("fas", "paper-plane")
            Sent for review

        %tr
          %td
          %td.text-center AE#3
          %td= (Time.zone.now - 3.weeks).strftime("%a, %b %-d, %Y")
          %td= link_to "Death", "#", data: { object: "suppress-click" }
          %td
          %td.nowrap Clinical Event Committee
          %td
            %span.badge.badge-success Ready for final review

        %tr.text-muted
          %td
          %td.text-center AE#2
          %td= (Time.zone.now - 4.weeks).strftime("%a, %b %-d, %Y")
          %td= link_to "Heart failure", "#", class: "text-muted", style: "text-decoration: line-through;", data: { object: "suppress-click" } # ae_module_reviewers_face_sheet_path(@project)
          %td
          %td.nowrap Clinical Event Committee
          %td.nowrap.text-muted
            = icon("fas", "check-square")
            Submitted final review
