- content_for :tabs do
  - current_page = current_page?(ae_module_managers_adverse_event_path(project, team, adverse_event))
  = link_to ae_module_managers_adverse_event_path(project, team, adverse_event), class: "header-tab #{"header-tab-active" if current_page}" do
    = icon("fas", "inbox")
    - if current_page
      Overview
    - else
      .d-none.d-sm-inline Overview

  - current_page = (params[:controller] == "ae_module/documents")
  = link_to ae_module_documents_path(project, adverse_event), class: "header-tab #{"header-tab-active" if current_page}" do
    = icon("fas", "paperclip")
    - if current_page
      Documents
    - else
      .d-none.d-sm-inline Documents

  - current_page = current_page?(ae_module_managers_adverse_event_log_path(project, team, adverse_event))
  = link_to ae_module_managers_adverse_event_log_path(project, team, adverse_event), class: "header-tab #{"header-tab-active" if current_page}" do
    =# icon("fas", "clipboard-list")
    = icon("fas", "list-alt")
    - if current_page
      Log
    - else
      .d-none.d-sm-inline Log
