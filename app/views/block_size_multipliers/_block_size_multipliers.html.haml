.dashboard-container
  %table.table.table-striped.table-borderless.table-hover
    %col
    %col
    %col.hidden-xs
    %col{ width: '1px' }
    %thead
      %tr
        %th.center Value
        %th.center Allocation
        %th.hidden-xs User
        %th Actions

    %tbody
      - @block_size_multipliers.each do |block_size_multiplier|
        %tr
          %td.center= link_to block_size_multiplier.name, [@project, @randomization_scheme, block_size_multiplier]
          %td.center= block_size_multiplier.allocation
          %td.hidden-xs= link_to block_size_multiplier.user.name, block_size_multiplier.user if block_size_multiplier.user
          %td
            - if @randomization_scheme.published?
              = link_to 'Scheme Published', '#', data: { object: 'suppress-click' }, class: 'btn btn-xs btn-primary', disabled: true
            - else
              .dropdown
                = link_to '#', class: 'btn btn-default btn-xs dropdown-toggle', data: { toggle: 'dropdown' } do
                  Actions
                  %strong.caret

                %ul.dropdown-menu.dropdown-menu-right
                  %li
                    = link_to edit_project_randomization_scheme_block_size_multiplier_path(@project, @randomization_scheme, block_size_multiplier) do
                      %span.glyphicon.glyphicon-edit
                      Edit
                  %li.divider{ role: 'separator' }
                  %li
                    = link_to [@project, @randomization_scheme, block_size_multiplier], method: :delete, data: { confirm: "Are you sure you want to delete Block Size Multiplier #{block_size_multiplier.name}?" } do
                      .text-danger
                        %span.glyphicon.glyphicon-trash
                        Delete
