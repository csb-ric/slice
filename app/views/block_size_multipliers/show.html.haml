- @title = @block_size_multiplier.name
- @menu_title = "#{@project.name} #{@title}"
- @breadcrumbs = []
- @breadcrumbs << [@randomization_scheme.name, [@project, @randomization_scheme]]

- content_for :sidebar, render("projects/sidebar")

- content_for :header do
  .float-right
    - unless @randomization_scheme.published?
      = render "layouts/edit_delete_dropdown_lg", edit_url: edit_project_randomization_scheme_block_size_multiplier_path(@project, @randomization_scheme, @block_size_multiplier), delete_url: [@project, @randomization_scheme, @block_size_multiplier], delete_confirmation: "Delete \"#{@block_size_multiplier.name}\" block size multiplier?"
  = @title

.dashboard-container
  %table.table.table-borderless
    %col.d-none.d-sm-table-column{ width: "30%" }
    %col.d-table-column.d-sm-none{ width: "50%" }
    %tr
      %th Value
      %td= @block_size_multiplier.value
    %tr
      %th Allocation
      %td= @block_size_multiplier.allocation
