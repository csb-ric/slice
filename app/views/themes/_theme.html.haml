- if params[:theme].in?(Slice::THEMES.collect(&:second))
  - @theme = @menu = @body = @footer = params[:theme]
- elsif current_user&.theme.in?(Slice::THEMES.collect(&:second))
  - @theme = @menu = @body = @footer = current_user&.theme
- else
  - @theme = @menu = @body = @footer = "default"

- case @theme
- when "night"
  - content_for :footer, render("decorations/moon")
- when "sunset"
  - content_for :footer, render("decorations/sunset")
