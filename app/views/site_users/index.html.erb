<% @title = 'Site Users' %>
<div class="page-header">
  <h1>
    <%= link_to @project.name, @project %> &middot; <%= @title %>
    <%= link_to "Create Site User", new_project_site_user_path, class: 'btn btn-mini btn-primary' if current_user.all_projects.pluck(:id).include?(@project.id) %>
  </h1>
</div>

<%= form_tag project_site_users_path, method: :get, remote: true, id: "site_users_search", class: 'form-search', data: { object: 'form-load' } do %>
  <%= hidden_field_tag :order %>
  <%= text_field_tag 'search', params[:search], class: 'search-query' %>
  <%= submit_tag 'Search', class: 'btn btn-primary' %>
<% end %>

<div id="site_users"><center><%= image_tag "contour/ajax-loader.gif" %></center></div>
