<% if option %>
  <% case option[:required] when 'required' %>
    <%= link_to '*', '#', class: 'text-danger', style: 'text-decoration:none', rel: 'tooltip', data: { object: 'suppress-click', title: 'Required Field', placement: 'right' }, tabindex: '-1' %>
  <% when 'recommended' %>
    <%= link_to '*', '#', class: 'text-primary', style: 'text-decoration:none', rel: 'tooltip', data: { object: 'suppress-click', title: 'Recommended Field', placement: 'right' }, tabindex: '-1' %>
  <% end %>
<% end %>
