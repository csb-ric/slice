<% if params[:location] == 'top' %>
  $("#form_grid_variables").prepend("<%= escape_javascript(render("edit_grid_variable")) %>");
<% elsif params[:location].to_i > 0 %>
  $("#form_grid_variable_<%= params[:location] %>").after("<%= escape_javascript(render("edit_grid_variable")) %>");
<% else %>
  $("#form_grid_variables").append("<%= escape_javascript(render("edit_grid_variable")) %>");
<% end %>

$('#variable_grid_tokens_<%= @position %>_variable_id.chzn-select').chosen();
