<% if params[:location] == 'top' %>
  $("#form_grid_variables").prepend("<%=j render 'edit_grid_variable', grid_variable: @grid_variable %>");
<% elsif params[:location].to_i > 0 %>
  $("#form_grid_variable_<%= params[:location] %>").after("<%=j render 'edit_grid_variable', grid_variable: @grid_variable %>");
<% else %>
  $("#form_grid_variables").append("<%=j render 'edit_grid_variable', grid_variable: @grid_variable %>");
<% end %>

$('.chzn-select').chosen({ allow_single_deselect: true });
