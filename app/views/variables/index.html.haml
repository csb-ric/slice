- @title = 'Variables'

= render 'projects/tabbed_menu', links: [['Variables', project_variables_path(@project)]]

.mini-menu-outer
  .mini-menu-left-fixed
    = render 'projects/menu_mini'
  .mini-menu-right-fluid
    %h2.underline-header
      = @title
      = link_to 'Create Variable', new_project_variable_path(@project), class: 'btn btn-xs btn-primary'
      .per-page
        = render 'layouts/per_page', per_page: 40, object_count: @variables.total_count

    = render 'variables/variables'

    .jumbotron
      = form_tag project_variables_path(@project), method: :get, id: "variables_search", class: 'form-horizontal' do
        = hidden_field_tag :order, params[:order]
        .form-group
          = label :search, 'Search', class: 'col-md-2 control-label'
          .col-md-10
            = text_field_tag 'search', params[:search], class: 'form-control'

        .form-group
          .col-md-10.col-md-offset-2
            = submit_tag 'Search', class: 'btn btn-primary', name: nil
            = link_to 'Reset', project_variables_path(@project), class: 'btn btn-default'
