- position = Time.now.to_i.to_s + Time.now.usec.to_s
- @position = position
.row{ id: "form_grid_variable_#{position}", style: "cursor:move;line-height:20px;padding-top:5px" }
  .col-xs-1
    %span.glyphicon.glyphicon-move
  .col-xs-5
    = select_tag "variable[grid_tokens][][variable_id]", options_for_select([[nil, nil]] + @select_variables, grid_variable[:variable_id]), data: { object: 'variable-load', position: position, placeholder: 'Choose a Variable' }, class: 'form-control chzn-select', id: "variable_grid_tokens_#{position}_variable_id"
  .col-xs-2
    = link_to 'Remove', "#", data: { object: 'remove', target: "#form_grid_variable_#{position}" }, class: 'btn btn-xs btn-danger-inverse'
