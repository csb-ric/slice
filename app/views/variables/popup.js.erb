$("#variable_popup_container").html("<%= escape_javascript(render("popup_form")) %>");
$("#variable_edit_modal").modal({ dynamic: true });

$("[rel~=popover]").popover({ offset: 10, trigger: 'focus' });
toggleOptions($('#variable_variable_type'));
$('#options[data-object~="sortable"]').sortable({ placeholder: "well alert alert-block" });

$('#variables[data-object~="sortable"], #form_grid_variables[data-object~="sortable"]').sortable({ placeholder: "well alert alert-block" });
loadColorSelectors();

$(".datepicker").datepicker({
  showOtherMonths: true,
  selectOtherMonths: true,
  changeMonth: true,
  changeYear: true,
  onClose: function (text, inst) { $(this).focus(); }
});
$(".datepicker").change(function(){
  try { $(this).val($.datepicker.formatDate('mm/dd/yy', $.datepicker.parseDate('mm/dd/yy', $(this).val()))); } catch(e) { }
});
