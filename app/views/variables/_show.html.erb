<% unless @variable.header.blank? %>
  <div class="page-header">
    <h4><%= @variable.header %></h4>
  </div>
<% end %>
<dl class="dl-horizontal">
  <dt><%= @variable.name %></dt>
  <dd>
    <% if @variable.variable_type == 'text' %>
      <%= simple_format @variable.response_name.to_s %>
    <% elsif @variable.variable_type == 'checkbox' %>
      <% @variable.response_name.each do |response| %>
        <p><%= response %></p>
      <% end %>
    <% else %>
      <%= @variable.response_name %>
    <% end %>
  </dd>
</dl>
