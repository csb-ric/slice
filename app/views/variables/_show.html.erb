<% unless @variable.header.blank? %>
  <div class="page-header">
    <h4><%= @variable.header %></h4>
  </div>
<% end %>
<div class="control-group">
  <% unless @variable.hide_display_name? %><label class="control-label"><%= @variable.display_name %></label><% end %>
  <div class="<%= "controls controls-row" unless @variable.hide_display_name? %>" style="padding-top:5px;">
    <span class="rounded-borders" style="background-color: <%= @variable.response_color(@sheet) %>">
    <% sheet_variable = @sheet ? @sheet.sheet_variables.find_by_variable_id(@variable.id) : nil %>
    <% if Variable::TYPE.flatten.uniq.include?(@variable.variable_type) %>
      <%= render partial: "sheet_variables/show/#{@variable.variable_type}", locals: { response: @variable.response_raw(@sheet), variable: @variable, sheet_variable: sheet_variable } %>
    <% end %>
    </span>
  </div>
</div>
