<%= render partial: 'layouts/per_page', locals: { type: 'variables', per_page: 20, object_count: @variable_count } %>

<table class="table table-striped table-bordered" style="width:100%">
  <thead>
    <tr>
      <th style="white-space:nowrap"><%== sort_field_helper(@order, 'variables.name', 'Name', 'variables_search') %></th>
      <th style="white-space:nowrap"><%== sort_field_helper(@order, 'variables.display_name', 'Display Name', 'variables_search') %></th>
      <th style="white-space:nowrap"><%== sort_field_helper(@order, 'variables.variable_type', 'Variable Type', 'variables_search') %></th>
      <th style="white-space:nowrap"><%== sort_field_helper(@order, 'variables.options', 'Options', 'variables_search') %></th>
      <th style="white-space:nowrap"><%== sort_field_helper(@order, 'variables.user_id', 'Creator', 'variables_search') %></th>
      <th>Actions</th>
    </tr>
  </thead>

  <% @variables.each do |variable| %>
    <tr id="variable_<%= variable.id %>">
      <td><%= link_to variable.name, [variable.project, variable] %></td>
      <td><%= link_to variable.display_name, [variable.project, variable] %></td>
      <td><span class="label label-<%= variable.variable_type %>"><%= variable.variable_type %></span></td>
      <td>
        <% if not variable.options.blank? and ['radio', 'checkbox'].include?(variable.variable_type) %>
          <%= render partial: "sheet_variables/form/#{variable.variable_type}", locals: { response: nil, disabled: true, variable: variable, field_name: "variables[#{variable.id}]" } %>
        <% end %>
      </td>
      <td><%= link_to variable.user.name, variable.user if variable.user %></td>
      <td>
        <%= link_to 'Copy', copy_project_variable_path(variable.project, variable), class: 'btn btn-mini' %>
        <% if variable.editable_by?(current_user) %>
          <%= link_to 'Edit', edit_project_variable_path(variable.project, variable), class: 'btn btn-mini' %>
          <%= link_to 'Delete', [variable.project, variable], method: :delete, remote: true, class: 'btn btn-mini btn-danger', data: { confirm: "Are you sure you want to delete Variable #{variable.name}?" } %>
        <% end %>
      </td>
    </tr>
  <% end %>
</table>

<center><%= paginate @variables %></center>
