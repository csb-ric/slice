<% @title = 'Variables' %>
<div class="page-header">
  <h1>
    <%= @title %>
    <%= link_to "Create Variable", new_variable_path, class: 'btn btn-mini btn-primary' %>
  </h1>
</div>

<%= form_tag variables_path, method: :get, remote: true, id: "variables_search", class: 'form-search' do %>
  <%= hidden_field_tag :order %>
  <div class="row">
    <div class="span4 control-group">
      <%= label :search, 'Search', class: 'control-label' %>
      <div class="controls">
        <%= text_field_tag 'search', params[:search], class: 'search-query', data: { object: 'filter' } %>
      </div>
    </div>

    <div class="span4 control-group">
      <%= label :project_id, 'Project', class: 'control-label' %>
      <div class="controls">
        <%= select_tag :project_id, options_for_select([['---', nil]] + current_user.all_viewable_projects.order('name').collect{|p| [p.name, p.id]}, params[:project_id] ), data: { object: 'filter' } %>
      </div>
    </div>

    <div class="span4 control-group">
      <%= label :user_id, 'Creator', class: 'control-label' %>
      <div class="controls">
        <%= select_tag 'user_id', options_for_select([['---', nil]] + User.current.with_variable.order('last_name, first_name').collect{|u| [u.reverse_name, u.id]}, params[:user_id]), data: { object: 'filter' } %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="span4 control-group">
      <%= label :variable_type, 'Variable Type', class: 'control-label' %>
      <div class="controls">
        <%= select_tag :variable_type, options_for_select([['---', nil]] + Variable::TYPE, params[:variable_type]), data: { object: 'filter' } %>
      </div>
    </div>
  </div>

  <div class="form-actions">
    <%= submit_tag 'Filter Search', class: 'btn btn-primary' %>
    <%= link_to 'Reset', '#', class: 'btn', data: { target: '#variables_search', object: 'reset-filters' } %>
  </div>
<% end %>

<div id="variables"><center><%= image_tag "contour/ajax-loader.gif" %></center></div>

<%= javascript_tag do %>
  $(function(){
    $.get($("#variables_search").attr("action"), $("#variables_search").serialize(), null, "script");
  });
<% end %>
