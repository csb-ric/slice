<div class="control-group">
  <%= f.label :name, nil, class: 'control-label' %>
  <div class="controls">
    <%= f.text_field :name, maxlength: 32, style: 'width:225px' %>
    <div class="help-block">Letter followed by letters, numbers, or underscores. Max length 32 characters.</div>
    <i>var1_population</i>
  </div>
</div>

<div class="control-group">
  <%= f.label :header, nil, class: 'control-label' %>
  <div class="controls">
    <%= f.text_field :header, style: 'width:95%' %>
  </div>
</div>

<div class="control-group">
  <%= f.label :display_name, nil, class: 'control-label' %>
  <div class="controls">
    <%= f.text_field :display_name, style: 'width:95%' %>
  </div>
</div>

<div class="control-group">
  <%= f.label :display_name_visibility, nil, class: 'control-label' %>
  <div class="controls">
    <%= f.select :display_name_visibility, Variable::DISPLAY_NAME_VISIBILITY %>
  </div>
</div>

<div class="control-group">
  <%= f.label :description, nil, class: 'control-label' %>
  <div class="controls">
    <%= f.text_area :description, rows: 7, style: 'width:95%' %>
  </div>
</div>

<div class="control-group">
  <%= f.label :variable_type, nil, class: 'control-label' %>
  <div class="controls">
    <%= f.select :variable_type, [['---', nil]] + Variable::TYPE %>
  </div>
</div>

<div class="control-group">
  <%= f.label :prepend, nil, class: 'control-label' %>
  <div class="controls">
    <%= f.text_field :prepend %>
  </div>
</div>

<div class="control-group">
  <%= f.label :append, nil, class: 'control-label' %>
  <div class="controls">
    <%= f.text_field :append %>
  </div>
</div>

<div class="control-group" data-object="number">
  <%= f.label :hard_minimum, nil, class: 'control-label' %>
  <div class="controls">
    <%= f.number_field :hard_minimum %>
  </div>
</div>

<div class="control-group" data-object="number">
  <%= f.label :hard_maximum, nil, class: 'control-label' %>
  <div class="controls">
    <%= f.number_field :hard_maximum %>
  </div>
</div>

<div class="control-group" data-object="number">
  <%= f.label :soft_minimum, nil, class: 'control-label' %>
  <div class="controls">
    <%= f.number_field :soft_minimum %>
  </div>
</div>

<div class="control-group" data-object="number">
  <%= f.label :soft_maximum, nil, class: 'control-label' %>
  <div class="controls">
    <%= f.number_field :soft_maximum %>
  </div>
</div>

<div class="control-group" data-object="calculated-or-number">
  <%= f.label :units, nil, class: 'control-label' %>
  <div class="controls">
    <%= f.text_field :units %>
  </div>
</div>

<div class="control-group" data-object="date">
  <%= f.label :date_hard_minimum, nil, class: 'control-label' %>
  <div class="controls">
    <%= f.text_field :date_hard_minimum, class: 'datepicker', value: @variable.date_hard_minimum ? @variable.date_hard_minimum.strftime('%m/%d/%Y') : '' %>
  </div>
</div>

<div class="control-group" data-object="date">
  <%= f.label :date_hard_maximum, nil, class: 'control-label' %>
  <div class="controls">
    <%= f.text_field :date_hard_maximum, class: 'datepicker', value: @variable.date_hard_maximum ? @variable.date_hard_maximum.strftime('%m/%d/%Y') : '' %>
  </div>
</div>

<div class="control-group" data-object="date">
  <%= f.label :date_soft_minimum, nil, class: 'control-label' %>
  <div class="controls">
    <%= f.text_field :date_soft_minimum, class: 'datepicker', value: @variable.date_soft_minimum ? @variable.date_soft_minimum.strftime('%m/%d/%Y') : '' %>
  </div>
</div>

<div class="control-group" data-object="date-or-time">
  <%= f.label :date_soft_maximum, nil, class: 'control-label' %>
  <div class="controls">
    <%= f.text_field :date_soft_maximum, class: 'datepicker', value: @variable.date_soft_maximum ? @variable.date_soft_maximum.strftime('%m/%d/%Y') : '' %>
  </div>
</div>

<div class="control-group" data-object="date-or-time">
  <%= f.label :show_current_button, nil, class: 'control-label' %>
  <div class="controls">
    <%= f.check_box :show_current_button %>
  </div>
</div>

<div class="control-group" data-object="calculated">
  <%= f.label :calculation, nil, class: 'control-label' %>
  <div class="controls">
    <%= f.text_field :calculation, style: 'width:95%',
        rel: "popover", data: { content: "
        <table class='table table-bordered'>
        <tbody>
          <tr><td style='font-weight:bold'>General</td><td>var1 + var2</td></tr>
          <tr><td style='font-weight:bold'>Missing Values</td><td>var1 == -9 ? -9 : var1 + var2</td></tr>
          <tr><td style='font-weight:bold'>Parentheses</td><td>(var1 + var2) / var3</td></tr>
        </tbody>
        </table>
        ", title: "Calculation Examples", placement: 'bottom' } %>
  </div>
</div>

<div class="control-group" data-object="calculated">
  <%= f.label :format, nil, class: 'control-label' %>
  <div class="controls">
    <%= f.text_field :format, style: 'width:95%',
        rel: "popover", data: { content: "
        <table class='table table-bordered'>
        <tbody>
          <tr><td style='font-weight:bold'>Precision</td><td>%0.02f</td><td>4.127 => 4.13</td></tr>
          <tr><td style='font-weight:bold'>Leading Zeros</td><td>%04d</td><td>45 => 0045</td></tr>
        </tbody>
        </table>
        ", title: "Calculation Examples", placement: 'bottom' } %>
  </div>
</div>

<div class="control-group" data-object="checkbox-or-radio">
  <%= f.label :alignment, nil, class: 'control-label' %>
  <div class="controls">
    <%= f.select :alignment, Variable::ALIGNMENT %>
  </div>
</div>

<% if true %>
  <div class="control-group" data-object="options">
    <label class="control-label">Options</label>
    <div class="controls">
      <div id="options" data-object="sortable">
        <%= render partial: 'options' %>
      </div>
      <div class="btn-toolbar">
        <%= link_to 'Add Another Option', '#', id: 'add_more_options', class: 'btn btn-mini' %>
      </div>
    </div>
  </div>
<% else %>
  <div class="form-actions" data-object="options">
    <% form_name = @variable.new_record? ? 'new_variable' : "edit_variable_#{@variable.id}" %>
    <% submit_name = @variable.new_record? ? 'Create Variable' : 'Update Variable' %>
    <%= submit_tag submit_name, class: 'btn btn-primary', data: { object: "form-check-before-submit", target: "##{form_name}" } %>
    <% if @popup %>
      <%= link_to 'Cancel', '#', class: 'btn', data: { target: '#variable_edit_modal', object: 'modal-hide', remove_class: 'error' } %>
    <% else %>
      <%= cancel %>
    <% end %>
  </div>

  <div id="options" data-object="options sortable">
    <%= render partial: 'options' %>
  </div>

  <div class="control-group" data-object="options">
    <label class="control-label">
      <%= link_to 'Add Another Option', '#', id: 'add_more_options', class: 'btn btn-mini' %>
    </label>
  </div>
<% end %>

<div class="control-group" data-object="grid">
  <%= f.label :multiple_rows, nil, class: 'control-label' %>
  <div class="controls">
    <%= f.check_box :multiple_rows %>
  </div>
</div>

<div class="control-group" data-object="grid">
  <%= f.label :default_row_number, nil, class: 'control-label' %>
  <div class="controls">
    <%= f.text_field :default_row_number %>
  </div>
</div>

<div class="control-group" data-object="grid">
  <label class="control-label">Variables</label>
  <div class="controls">
    <div id="form_grid_variables" data-object="sortable">
      <% @variable.grid_variables.each do |grid_variable| %>
        <%= @grid_variable = grid_variable; render partial: 'edit_grid_variable' %>
      <% end %>
    </div>
    <div class="btn-toolbar">
      <%= link_to 'Add Another Variable', '#', id: 'add_grid_variable', class: 'btn btn-mini', data: { position: 'bottom' } %>
    </div>
  </div>
</div>

<div class="control-group" data-object="autocomplete">
  <%= f.label :autocomplete_values, nil, class: 'control-label' %>
  <div class="controls">
    <%= f.text_area :autocomplete_values, rows: 7, style: 'width:95%', rel: "tooltip", title: "Line-separated Strings" %>
  </div>
</div>

<div class="control-group" data-object="autocomplete">
  <label class="control-label">User submitted</label>
  <div class="controls">
    <div style="line-height:30px">
      <%= @variable.user_submitted_sheet_variables.collect{|sv| link_to sv.response.to_s, [sv.sheet.project, sv.sheet] }.join(', ').html_safe  %>
      <%#= @variable.sheet_variables.select{|sv| not @variable.autocomplete_array.include?(sv.response.to_s.strip) and not sv.response.to_s.strip.blank?}.collect{|sv| link_to sv.response.to_s, sv.sheet }.join(', ').html_safe %>
    </div>
  </div>
</div>
