- @title = "Domain Options"
- @menu_title = "#{@project.name} #{@title}"

- content_for :sidebar, render("projects/sidebar")

- content_for :header do
  .float-right
    = link_to plus_or("New Domain Option"), new_project_domain_domain_option_path(@project, @domain), class: "btn btn-accent btn-shadow"
  = @title
- content_for :breadcrumbs do
  = render "layouts/per_page_breadcrumbs", per_page: 40, object_count: @domain_options.total_count
  %ol
    %li= link_to "domains", project_domains_path(@project)
    %li= link_to @domain.name.downcase, [@project, @domain]
    %li.breadcrumb-muted options

.dashboard-container.dashboard-table
  = render "domain_options/domain_options", domain: @domain, domain_options: @domain_options
