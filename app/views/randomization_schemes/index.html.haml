- @title = 'Randomization Schemes'

= render 'projects/tabbed_menu', links: [['Randomization Schemes', project_randomization_schemes_path(@project)]]

.row
  .col-sm-2
    = render 'projects/menu'

  .col-sm-10
    %h2
      = @title
    %div{ style: 'margin-bottom: 20px' }
      = link_to "Create Randomization Scheme", new_project_randomization_scheme_path(@project), class: 'btn btn-xs btn-primary'

    = form_tag project_randomization_schemes_path(@project), method: :get, class: 'form-vertical' do
      = hidden_field_tag :order, params[:order]
      .row
        .col-md-4.form-group
          = label :search, 'Search', class: 'col-md-3 control-label'
          .col-md-9
            = text_field_tag 'search', params[:search], class: 'form-control'

        .col-md-4.form-group
          = label :user_id, 'Creator', class: 'col-md-3 control-label'
          .col-md-9
            = select_tag 'user_id', options_for_select([['---', nil]] + User.where( id: @project.randomization_schemes.select(:user_id) ).order('last_name, first_name').collect{|u| [u.reverse_name, u.id]}, params[:user_id]), class: 'form-control'

        .col-md-4.form-group
          = submit_tag 'Search', class: 'btn btn-primary', name: nil
          = link_to 'Reset', project_randomization_schemes_path(@project), class: 'btn btn-default'

    = render 'randomization_schemes/randomization_schemes'
